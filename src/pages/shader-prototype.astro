---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Shader Prototype | René Portfolio">
  <main class="shader-page">
    <canvas id="shader-canvas"></canvas>
    <div class="overlay">
      <h1>Shader Prototype V3</h1>
      <p>Move your mouse to see the cracks open</p>
      <a href="/" class="back-link">← Back to Portfolio</a>
    </div>
  </main>
</Layout>

<style>
  .shader-page {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background: #000;
  }
  
  #shader-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .overlay {
    position: absolute;
    bottom: 40px;
    left: 40px;
    z-index: 10;
    pointer-events: none;
  }
  
  .overlay h1 {
    font-size: 1.5rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.8);
  }
  
  .overlay p {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
  }
  
  .overlay .back-link {
    pointer-events: auto;
    font-size: 0.875rem;
    color: rgba(255, 150, 100, 0.8);
    transition: color 0.2s ease;
  }
  
  .overlay .back-link:hover {
    color: rgba(255, 180, 120, 1);
  }
</style>

<script>
import * as THREE from 'three';

const vertexShader = `
  varying vec2 vUv;
  
  void main() {
    vUv = uv;
    gl_Position = projectionMatrix * modelViewMatrix * vec4(position, 1.0);
  }
`;

const fragmentShader = `
  precision highp float;
  
  uniform float uTime;
  uniform vec2 uMouse;
  uniform vec2 uResolution;
  uniform float uMouseInfluence;
  varying vec2 vUv;
  
  //=== SIMPLEX NOISE ===
  vec3 mod289(vec3 x) { return x - floor(x * (1.0 / 289.0)) * 289.0; }
  vec2 mod289(vec2 x) { return x - floor(x * (1.0 / 289.0)) * 289.0; }
  vec3 permute(vec3 x) { return mod289(((x*34.0)+1.0)*x); }
  
  float snoise(vec2 v) {
    const vec4 C = vec4(0.211324865405187, 0.366025403784439, -0.577350269189626, 0.024390243902439);
    vec2 i  = floor(v + dot(v, C.yy));
    vec2 x0 = v - i + dot(i, C.xx);
    vec2 i1 = (x0.x > x0.y) ? vec2(1.0, 0.0) : vec2(0.0, 1.0);
    vec4 x12 = x0.xyxy + C.xxzz;
    x12.xy -= i1;
    i = mod289(i);
    vec3 p = permute(permute(i.y + vec3(0.0, i1.y, 1.0)) + i.x + vec3(0.0, i1.x, 1.0));
    vec3 m = max(0.5 - vec3(dot(x0,x0), dot(x12.xy,x12.xy), dot(x12.zw,x12.zw)), 0.0);
    m = m*m; m = m*m;
    vec3 x = 2.0 * fract(p * C.www) - 1.0;
    vec3 h = abs(x) - 0.5;
    vec3 ox = floor(x + 0.5);
    vec3 a0 = x - ox;
    m *= 1.79284291400159 - 0.85373472095314 * (a0*a0 + h*h);
    vec3 g;
    g.x = a0.x * x0.x + h.x * x0.y;
    g.yz = a0.yz * x12.xz + h.yz * x12.yw;
    return 130.0 * dot(m, g);
  }
  
  // Hash functions
  float hash(vec2 p) {
    return fract(sin(dot(p, vec2(127.1, 311.7))) * 43758.5453);
  }
  
  vec2 hash2(vec2 p) {
    p = vec2(dot(p, vec2(127.1, 311.7)), dot(p, vec2(269.5, 183.3)));
    return fract(sin(p) * 43758.5453);
  }
  
  // FBM with Simplex Noise
  float fbm(vec2 p, int octaves) {
    float value = 0.0;
    float amplitude = 0.5;
    float frequency = 1.0;
    for(int i = 0; i < 8; i++) {
      if(i >= octaves) break;
      value += amplitude * snoise(p * frequency);
      amplitude *= 0.5;
      frequency *= 2.0;
    }
    return value;
  }
  
  // Turbulent FBM
  float turbulence(vec2 p, int octaves) {
    float value = 0.0;
    float amplitude = 0.5;
    float frequency = 1.0;
    for(int i = 0; i < 8; i++) {
      if(i >= octaves) break;
      value += amplitude * abs(snoise(p * frequency));
      amplitude *= 0.5;
      frequency *= 2.0;
    }
    return value;
  }
  
  // Voronoi for crack network
  vec3 voronoi(vec2 p) {
    vec2 n = floor(p);
    vec2 f = fract(p);
    
    float md1 = 8.0;
    float md2 = 8.0;
    vec2 mr;
    
    for(int j = -1; j <= 1; j++) {
      for(int i = -1; i <= 1; i++) {
        vec2 g = vec2(float(i), float(j));
        vec2 o = hash2(n + g);
        o = 0.5 + 0.45 * sin(6.2831 * o + 0.3);
        vec2 r = g + o - f;
        float d = dot(r, r);
        
        if(d < md1) {
          md2 = md1;
          md1 = d;
          mr = r;
        } else if(d < md2) {
          md2 = d;
        }
      }
    }
    
    return vec3(sqrt(md1), sqrt(md2), sqrt(md2) - sqrt(md1));
  }
  
  // Get organic crack with noise displacement on the edge
  float getCrack(vec2 p, float scale, float noiseAmt) {
    // Warp the coordinates for organic shapes
    vec2 warp = vec2(
      fbm(p * 3.0, 4),
      fbm(p * 3.0 + 100.0, 4)
    ) * noiseAmt;
    
    vec2 warped = p * scale + warp * scale;
    vec3 v = voronoi(warped);
    
    // Edge distance with added noise for uneven edges
    float edge = v.z;
    
    // Add fine noise to crack edges
    float edgeNoise = snoise(p * scale * 4.0) * 0.02;
    edgeNoise += snoise(p * scale * 12.0) * 0.01;
    edge += edgeNoise;
    
    return edge;
  }
  
  // Stone texture  
  float stoneTexture(vec2 p) {
    float n1 = turbulence(p * 6.0, 5) * 0.4;
    float n2 = snoise(p * 15.0) * 0.2;
    float n3 = snoise(p * 35.0) * 0.1;
    float n4 = snoise(p * 70.0) * 0.05;
    return n1 + n2 + n3 + n4;
  }
  
  // Lava texture with flow
  vec3 lavaColor(vec2 p, float time, float temp) {
    // Slow flowing
    vec2 flow = p + vec2(time * 0.015, time * 0.01);
    
    // Temperature variations in lava
    float variation = snoise(flow * 4.0) * 0.3;
    variation += snoise(flow * 8.0 + 50.0) * 0.2;
    variation += turbulence(flow * 2.0, 3) * 0.2;
    
    float t = clamp(temp + variation, 0.0, 1.0);
    
    // Color gradient - more vibrant like reference
    vec3 darkRed = vec3(0.2, 0.02, 0.0);
    vec3 red = vec3(0.6, 0.1, 0.0);
    vec3 orange = vec3(0.95, 0.35, 0.0);
    vec3 yellow = vec3(1.0, 0.65, 0.1);
    vec3 white = vec3(1.0, 0.9, 0.5);
    
    vec3 col = darkRed;
    col = mix(col, red, smoothstep(0.0, 0.25, t));
    col = mix(col, orange, smoothstep(0.25, 0.5, t));
    col = mix(col, yellow, smoothstep(0.5, 0.75, t));
    col = mix(col, white, smoothstep(0.8, 1.0, t) * 0.7);
    
    return col;
  }
  
  void main() {
    vec2 uv = vUv;
    vec2 aspect = vec2(uResolution.x / uResolution.y, 1.0);
    vec2 uvAspect = uv * aspect;
    vec2 mouseAspect = uMouse * aspect;
    
    // Mouse influence
    float dist = distance(uvAspect, mouseAspect);
    float mouseNear = smoothstep(0.4, 0.0, dist);
    float mouseWide = smoothstep(0.9, 0.0, dist);
    
    float openAmount = uMouseInfluence;
    
    // === CRACK NETWORK ===
    // Main large cracks (like reference - prominent)
    float edge1 = getCrack(uv, 2.8, 0.35);
    
    // Secondary cracks
    float edge2 = getCrack(uv + 50.0, 5.0, 0.3);
    
    // Fine cracks
    float edge3 = getCrack(uv + 100.0, 9.0, 0.25);
    
    // Animated crack width based on mouse
    float baseWidth1 = 0.025;
    float maxWidth1 = 0.14;
    float width1 = mix(baseWidth1, maxWidth1, openAmount * mouseWide + 0.3);
    width1 *= (0.7 + snoise(uv * 8.0) * 0.5); // Vary width along crack
    
    float baseWidth2 = 0.015;
    float maxWidth2 = 0.09;
    float width2 = mix(baseWidth2, maxWidth2, openAmount * mouseWide + 0.2);
    width2 *= (0.6 + snoise(uv * 12.0 + 30.0) * 0.6);
    
    float baseWidth3 = 0.008;
    float maxWidth3 = 0.05;
    float width3 = mix(baseWidth3, maxWidth3, openAmount * mouseWide + 0.1);
    width3 *= (0.5 + snoise(uv * 16.0 + 60.0) * 0.7);
    
    // Crack masks
    float crack1 = 1.0 - smoothstep(0.0, width1, edge1);
    float crack1Core = 1.0 - smoothstep(0.0, width1 * 0.35, edge1);
    float crack1Glow = 1.0 - smoothstep(0.0, width1 * 3.5, edge1);
    
    float crack2 = 1.0 - smoothstep(0.0, width2, edge2);
    float crack2Core = 1.0 - smoothstep(0.0, width2 * 0.35, edge2);
    float crack2Glow = 1.0 - smoothstep(0.0, width2 * 3.0, edge2);
    
    float crack3 = (1.0 - smoothstep(0.0, width3, edge3)) * (openAmount * 0.7 + 0.3);
    float crack3Core = (1.0 - smoothstep(0.0, width3 * 0.35, edge3)) * (openAmount * 0.6 + 0.2);
    float crack3Glow = (1.0 - smoothstep(0.0, width3 * 2.5, edge3)) * (openAmount * 0.5 + 0.2);
    
    // Combine
    float cracks = max(crack1, max(crack2 * 0.9, crack3 * 0.7));
    float crackCore = max(crack1Core, max(crack2Core * 0.85, crack3Core * 0.6));
    float crackGlow = max(crack1Glow, max(crack2Glow * 0.8, crack3Glow * 0.5));
    
    // === STONE PLATES ===
    vec3 v1 = voronoi(uv * 2.8 + vec2(fbm(uv * 3.0, 3) * 0.35));
    float cellDist = v1.x;
    float plateId = hash(floor(uv * 2.8 + 0.5 + vec2(fbm(uv * 3.0, 3) * 0.35)));
    
    // Stone height from texture + plate variation
    float stoneTex = stoneTexture(uv);
    float plateHeight = plateId * 0.2;
    float totalHeight = stoneTex + plateHeight;
    
    // Darken near cracks (depth)
    totalHeight -= crackGlow * 0.25;
    
    // Bevel at plate edges
    float bevel = smoothstep(0.0, 0.2, cellDist);
    totalHeight *= 0.85 + bevel * 0.15;
    
    // Stone color - very dark basalt
    vec3 stoneBlack = vec3(0.008, 0.008, 0.01);
    vec3 stoneDark = vec3(0.025, 0.023, 0.03);
    vec3 stoneMid = vec3(0.05, 0.045, 0.055);
    vec3 stoneLight = vec3(0.085, 0.08, 0.09);
    
    float h = totalHeight * 0.5 + 0.5;
    vec3 stoneColor = stoneBlack;
    stoneColor = mix(stoneColor, stoneDark, smoothstep(0.3, 0.45, h));
    stoneColor = mix(stoneColor, stoneMid, smoothstep(0.45, 0.6, h));
    stoneColor = mix(stoneColor, stoneLight, smoothstep(0.6, 0.8, h) * 0.5);
    
    // Micro detail
    float micro = snoise(uv * 60.0) * 0.08;
    stoneColor *= 1.0 + micro;
    
    // Subtle highlights on high points
    float highlight = pow(max(h - 0.65, 0.0) * 3.0, 2.0) * 0.05;
    stoneColor += vec3(highlight);
    
    // Shadow near cracks
    stoneColor *= 1.0 - crackGlow * 0.6;
    
    // === LAVA ===
    float lavaTemp = crackCore * 0.7 + cracks * 0.3;
    lavaTemp = pow(lavaTemp, 0.7); // Boost mid-tones
    
    vec3 lava = lavaColor(uv, uTime, lavaTemp);
    
    // Brighter near mouse
    lava *= 1.0 + mouseNear * 0.4;
    
    // Pulsing
    float pulse = sin(uTime * 0.7 + totalHeight * 4.0) * 0.08 + 0.96;
    lava *= pulse;
    
    // Extra bright in core
    vec3 hotCore = vec3(1.0, 0.85, 0.35);
    lava = mix(lava, hotCore, crackCore * 0.4 * (0.7 + mouseNear * 0.5));
    
    // === COMBINE ===
    vec3 finalColor = stoneColor;
    
    // Subsurface glow through stone
    float subsurface = crackGlow * (0.3 + openAmount * 0.4);
    finalColor += vec3(0.12, 0.025, 0.0) * subsurface;
    
    // Lava in cracks
    float lavaVis = cracks * (0.7 + openAmount * 0.3);
    finalColor = mix(finalColor, lava, lavaVis);
    
    // Rim glow
    float rim = max(crackGlow - cracks, 0.0) * (0.4 + openAmount * 0.6);
    finalColor += vec3(0.25, 0.05, 0.0) * rim;
    
    // Bloom near mouse
    float bloom = crackGlow * mouseNear * 0.5;
    finalColor += vec3(0.35, 0.1, 0.02) * bloom;
    
    // === POST ===
    // Vignette
    float vig = 1.0 - smoothstep(0.45, 1.35, length(uv - 0.5) * 1.15);
    finalColor *= vig * 0.2 + 0.8;
    
    // Slight contrast boost
    finalColor = pow(finalColor, vec3(0.92));
    
    gl_FragColor = vec4(finalColor, 1.0);
  }
`;

function init() {
  const canvas = document.getElementById('shader-canvas') as HTMLCanvasElement;
  if (!canvas) return;
  
  const renderer = new THREE.WebGLRenderer({ 
    canvas, 
    antialias: true,
    powerPreference: 'high-performance'
  });
  renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
  renderer.setSize(window.innerWidth, window.innerHeight);
  
  const scene = new THREE.Scene();
  const camera = new THREE.OrthographicCamera(-1, 1, 1, -1, 0.1, 10);
  camera.position.z = 1;
  
  const uniforms = {
    uTime: { value: 0 },
    uMouse: { value: new THREE.Vector2(0.5, 0.5) },
    uResolution: { value: new THREE.Vector2(window.innerWidth, window.innerHeight) },
    uMouseInfluence: { value: 0.5 }
  };
  
  const material = new THREE.ShaderMaterial({
    vertexShader,
    fragmentShader,
    uniforms
  });
  
  const mesh = new THREE.Mesh(new THREE.PlaneGeometry(2, 2), material);
  scene.add(mesh);
  
  const targetMouse = new THREE.Vector2(0.5, 0.5);
  const currentMouse = new THREE.Vector2(0.5, 0.5);
  let targetInfluence = 0.5;
  let currentInfluence = 0.5;
  let lastMouseMove = Date.now();
  
  document.addEventListener('mousemove', (e) => {
    targetMouse.x = e.clientX / window.innerWidth;
    targetMouse.y = 1.0 - (e.clientY / window.innerHeight);
    lastMouseMove = Date.now();
    
    const centerDist = Math.sqrt(
      Math.pow(targetMouse.x - 0.5, 2) + 
      Math.pow(targetMouse.y - 0.5, 2)
    );
    targetInfluence = Math.min(1.0, 0.6 + (1.0 - centerDist) * 0.6);
  });
  
  document.addEventListener('mouseleave', () => {
    targetInfluence = 0.35;
  });
  
  document.addEventListener('touchmove', (e) => {
    if (e.touches.length > 0) {
      targetMouse.x = e.touches[0].clientX / window.innerWidth;
      targetMouse.y = 1.0 - (e.touches[0].clientY / window.innerHeight);
      lastMouseMove = Date.now();
      targetInfluence = 1.0;
    }
  });
  
  document.addEventListener('touchend', () => {
    targetInfluence = 0.4;
  });
  
  window.addEventListener('resize', () => {
    renderer.setSize(window.innerWidth, window.innerHeight);
    uniforms.uResolution.value.set(window.innerWidth, window.innerHeight);
  });
  
  function animate() {
    requestAnimationFrame(animate);
    
    uniforms.uTime.value += 0.016;
    
    currentMouse.x += (targetMouse.x - currentMouse.x) * 0.05;
    currentMouse.y += (targetMouse.y - currentMouse.y) * 0.05;
    uniforms.uMouse.value.copy(currentMouse);
    
    if (Date.now() - lastMouseMove > 3000) {
      targetInfluence = Math.max(0.35, targetInfluence - 0.002);
    }
    
    const influenceSpeed = currentInfluence < targetInfluence ? 0.025 : 0.012;
    currentInfluence += (targetInfluence - currentInfluence) * influenceSpeed;
    uniforms.uMouseInfluence.value = currentInfluence;
    
    renderer.render(scene, camera);
  }
  
  animate();
}

if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', init);
} else {
  init();
}
</script>
