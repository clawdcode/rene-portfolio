---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Shader Prototype | René Portfolio">
  <main class="shader-page">
    <canvas id="shader-canvas"></canvas>
    <div class="overlay">
      <h1>Shader Prototype</h1>
      <p>Move your mouse to reveal the heat beneath</p>
      <a href="/" class="back-link">← Back to Portfolio</a>
    </div>
  </main>
</Layout>

<style>
  .shader-page {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background: #000;
  }
  
  #shader-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .overlay {
    position: absolute;
    bottom: 40px;
    left: 40px;
    z-index: 10;
    pointer-events: none;
  }
  
  .overlay h1 {
    font-size: 1.5rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.8);
  }
  
  .overlay p {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
  }
  
  .overlay .back-link {
    pointer-events: auto;
    font-size: 0.875rem;
    color: rgba(255, 150, 100, 0.8);
    transition: color 0.2s ease;
  }
  
  .overlay .back-link:hover {
    color: rgba(255, 180, 120, 1);
  }
</style>

<script>
import * as THREE from 'three';

const vertexShader = `
  varying vec2 vUv;
  
  void main() {
    vUv = uv;
    gl_Position = projectionMatrix * modelViewMatrix * vec4(position, 1.0);
  }
`;

const fragmentShader = `
  precision highp float;
  
  uniform float uTime;
  uniform vec2 uMouse;
  uniform vec2 uResolution;
  varying vec2 vUv;
  
  // Hash functions for noise
  float hash(vec2 p) {
    return fract(sin(dot(p, vec2(127.1, 311.7))) * 43758.5453);
  }
  
  vec2 hash2(vec2 p) {
    p = vec2(dot(p, vec2(127.1, 311.7)), dot(p, vec2(269.5, 183.3)));
    return fract(sin(p) * 43758.5453);
  }
  
  // Value noise for stone texture
  float valueNoise(vec2 p) {
    vec2 i = floor(p);
    vec2 f = fract(p);
    f = f * f * (3.0 - 2.0 * f);
    
    float a = hash(i);
    float b = hash(i + vec2(1.0, 0.0));
    float c = hash(i + vec2(0.0, 1.0));
    float d = hash(i + vec2(1.0, 1.0));
    
    return mix(mix(a, b, f.x), mix(c, d, f.x), f.y);
  }
  
  // FBM for stone texture
  float stoneFBM(vec2 p) {
    float value = 0.0;
    float amplitude = 0.5;
    float frequency = 1.0;
    for(int i = 0; i < 5; i++) {
      value += amplitude * valueNoise(p * frequency);
      amplitude *= 0.5;
      frequency *= 2.0;
    }
    return value;
  }
  
  // Voronoi edge detection for cracks
  float voronoiCracks(vec2 p, float jitter) {
    vec2 n = floor(p);
    vec2 f = fract(p);
    
    float md = 8.0;   // min distance to edge
    float md2 = 8.0;  // second min distance
    
    for(int j = -1; j <= 1; j++) {
      for(int i = -1; i <= 1; i++) {
        vec2 g = vec2(float(i), float(j));
        vec2 o = hash2(n + g) * jitter;
        vec2 r = g + o - f;
        float d = dot(r, r);
        
        if(d < md) {
          md2 = md;
          md = d;
        } else if(d < md2) {
          md2 = d;
        }
      }
    }
    
    // Edge = difference between closest and second closest
    return sqrt(md2) - sqrt(md);
  }
  
  // Multi-scale crack pattern
  float getCracks(vec2 uv) {
    // Large primary cracks
    float crack1 = voronoiCracks(uv * 4.0, 0.9);
    crack1 = smoothstep(0.0, 0.06, crack1);
    
    // Medium secondary cracks
    float crack2 = voronoiCracks(uv * 8.0 + 50.0, 0.85);
    crack2 = smoothstep(0.0, 0.04, crack2);
    
    // Fine tertiary cracks
    float crack3 = voronoiCracks(uv * 16.0 + 100.0, 0.8);
    crack3 = smoothstep(0.0, 0.03, crack3);
    
    // Combine: primary always visible, secondary/tertiary fade in hierarchy
    float cracks = crack1;
    cracks = min(cracks, crack2 * 0.7 + 0.3);
    cracks = min(cracks, crack3 * 0.4 + 0.6);
    
    return cracks;
  }
  
  // Sharp crack lines for lava
  float getCrackLines(vec2 uv) {
    // Primary crack lines - sharp
    float line1 = voronoiCracks(uv * 4.0, 0.9);
    line1 = 1.0 - smoothstep(0.0, 0.025, line1);
    line1 = pow(line1, 1.5);
    
    // Secondary crack lines - thinner
    float line2 = voronoiCracks(uv * 8.0 + 50.0, 0.85);
    line2 = 1.0 - smoothstep(0.0, 0.015, line2);
    line2 = pow(line2, 2.0) * 0.7;
    
    // Tertiary - finest
    float line3 = voronoiCracks(uv * 16.0 + 100.0, 0.8);
    line3 = 1.0 - smoothstep(0.0, 0.01, line3);
    line3 = pow(line3, 2.5) * 0.4;
    
    return max(max(line1, line2), line3);
  }
  
  void main() {
    vec2 uv = vUv;
    vec2 aspect = vec2(uResolution.x / uResolution.y, 1.0);
    vec2 uvAspect = uv * aspect;
    vec2 mouseAspect = uMouse * aspect;
    
    // Mouse influence with smooth falloff
    float dist = distance(uvAspect, mouseAspect);
    float mouseInfluence = smoothstep(0.6, 0.0, dist);
    float mouseInfluenceWide = smoothstep(0.9, 0.0, dist);
    
    // === STONE TEXTURE ===
    // Multiple layers of noise for realistic basalt look
    float stoneBase = stoneFBM(uv * 12.0);
    float stoneDetail = stoneFBM(uv * 24.0 + 100.0);
    float stoneFine = stoneFBM(uv * 48.0 + 200.0);
    
    // Combine for varied stone surface
    float stoneTexture = stoneBase * 0.5 + stoneDetail * 0.35 + stoneFine * 0.15;
    
    // === CRACK PATTERN ===
    float cracks = getCracks(uv);
    float crackLines = getCrackLines(uv);
    
    // === COLORS ===
    // Dark basalt/obsidian stone colors
    vec3 stoneBlack = vec3(0.02, 0.02, 0.02);
    vec3 stoneDark = vec3(0.06, 0.055, 0.05);
    vec3 stoneMid = vec3(0.1, 0.09, 0.085);
    
    // Lava colors - bright in center, dark red at edges
    vec3 lavaCore = vec3(1.0, 0.95, 0.4);      // Yellow-white hot
    vec3 lavaBright = vec3(1.0, 0.6, 0.1);     // Bright orange
    vec3 lavaMid = vec3(0.9, 0.25, 0.0);       // Orange-red
    vec3 lavaDark = vec3(0.4, 0.05, 0.0);      // Dark red glow
    
    // Build stone surface with texture
    float stoneMix = stoneTexture;
    vec3 stone = mix(stoneBlack, stoneDark, stoneMix);
    stone = mix(stone, stoneMid, pow(stoneTexture, 2.0) * 0.5);
    
    // Add subtle surface relief based on crack proximity
    float crackDepth = 1.0 - cracks;
    stone *= (0.85 + cracks * 0.15); // Darken near cracks
    
    // Add fine surface detail
    stone += vec3(stoneFine * 0.03);
    
    // === LAVA IN CRACKS ===
    // Lava only appears in crack lines
    float lavaAmount = crackLines;
    
    // Mouse reveals/intensifies the lava
    float lavaVisibility = mix(0.3, 1.0, mouseInfluenceWide);
    lavaAmount *= lavaVisibility;
    
    // Subtle pulsing animation
    float pulse = sin(uTime * 0.8) * 0.15 + 0.85;
    float pulse2 = sin(uTime * 1.2 + uv.x * 10.0) * 0.1 + 0.9;
    lavaAmount *= pulse * pulse2;
    
    // Color gradient within crack: bright center, dark edges
    float crackCenter = pow(crackLines, 0.5); // Brighter falloff for center
    
    vec3 lavaColor = mix(lavaDark, lavaMid, crackCenter);
    lavaColor = mix(lavaColor, lavaBright, pow(crackCenter, 1.5));
    lavaColor = mix(lavaColor, lavaCore, pow(crackCenter, 3.0));
    
    // Increase brightness/saturation near mouse
    lavaColor *= (0.7 + mouseInfluence * 0.5);
    lavaColor = mix(lavaColor, lavaCore, mouseInfluence * pow(crackCenter, 2.0) * 0.3);
    
    // === COMBINE ===
    vec3 finalColor = stone;
    
    // Add lava in cracks
    finalColor = mix(finalColor, lavaColor, lavaAmount);
    
    // Add glow around cracks near mouse (subtle bloom effect)
    float glowWidth = voronoiCracks(uv * 4.0, 0.9);
    float glow = 1.0 - smoothstep(0.0, 0.15, glowWidth);
    glow = pow(glow, 3.0) * mouseInfluence * 0.4;
    finalColor += lavaDark * glow;
    
    // Add secondary glow for medium cracks
    float glowWidth2 = voronoiCracks(uv * 8.0 + 50.0, 0.85);
    float glow2 = 1.0 - smoothstep(0.0, 0.1, glowWidth2);
    glow2 = pow(glow2, 3.0) * mouseInfluence * 0.2;
    finalColor += lavaDark * glow2;
    
    // === POST PROCESSING ===
    // Subtle vignette
    float vignette = 1.0 - smoothstep(0.5, 1.5, length(uv - 0.5) * 1.4);
    finalColor *= vignette * 0.3 + 0.7;
    
    // Slight contrast boost
    finalColor = pow(finalColor, vec3(1.1));
    
    gl_FragColor = vec4(finalColor, 1.0);
  }
`;

function init() {
  const canvas = document.getElementById('shader-canvas') as HTMLCanvasElement;
  if (!canvas) return;
  
  const renderer = new THREE.WebGLRenderer({ 
    canvas, 
    antialias: true,
    powerPreference: 'high-performance'
  });
  renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
  renderer.setSize(window.innerWidth, window.innerHeight);
  
  const scene = new THREE.Scene();
  const camera = new THREE.OrthographicCamera(-1, 1, 1, -1, 0.1, 10);
  camera.position.z = 1;
  
  const uniforms = {
    uTime: { value: 0 },
    uMouse: { value: new THREE.Vector2(0.5, 0.5) },
    uResolution: { value: new THREE.Vector2(window.innerWidth, window.innerHeight) }
  };
  
  const material = new THREE.ShaderMaterial({
    vertexShader,
    fragmentShader,
    uniforms
  });
  
  const mesh = new THREE.Mesh(new THREE.PlaneGeometry(2, 2), material);
  scene.add(mesh);
  
  // Smooth mouse tracking
  const targetMouse = new THREE.Vector2(0.5, 0.5);
  const currentMouse = new THREE.Vector2(0.5, 0.5);
  
  // Mouse move handler
  document.addEventListener('mousemove', (e) => {
    targetMouse.x = e.clientX / window.innerWidth;
    targetMouse.y = 1.0 - (e.clientY / window.innerHeight);
  });
  
  // Touch support
  document.addEventListener('touchmove', (e) => {
    if (e.touches.length > 0) {
      targetMouse.x = e.touches[0].clientX / window.innerWidth;
      targetMouse.y = 1.0 - (e.touches[0].clientY / window.innerHeight);
    }
  });
  
  // Resize handler
  window.addEventListener('resize', () => {
    renderer.setSize(window.innerWidth, window.innerHeight);
    uniforms.uResolution.value.set(window.innerWidth, window.innerHeight);
  });
  
  // Animation loop
  function animate() {
    requestAnimationFrame(animate);
    
    uniforms.uTime.value += 0.016;
    
    // Smooth mouse interpolation
    currentMouse.x += (targetMouse.x - currentMouse.x) * 0.08;
    currentMouse.y += (targetMouse.y - currentMouse.y) * 0.08;
    uniforms.uMouse.value.copy(currentMouse);
    
    renderer.render(scene, camera);
  }
  
  animate();
}

// Initialize when DOM is ready
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', init);
} else {
  init();
}
</script>
