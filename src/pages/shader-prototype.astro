---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Shader Prototype | René Portfolio">
  <main class="shader-page">
    <canvas id="shader-canvas"></canvas>
    <div class="overlay">
      <h1>Shader Prototype V4</h1>
      <p>Move your mouse to see the cracks form</p>
      <a href="/" class="back-link">← Back to Portfolio</a>
    </div>
  </main>
</Layout>

<style>
  .shader-page {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background: #000;
  }
  
  #shader-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .overlay {
    position: absolute;
    bottom: 40px;
    left: 40px;
    z-index: 10;
    pointer-events: none;
  }
  
  .overlay h1 {
    font-size: 1.5rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.8);
  }
  
  .overlay p {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
  }
  
  .overlay .back-link {
    pointer-events: auto;
    font-size: 0.875rem;
    color: rgba(255, 150, 100, 0.8);
    transition: color 0.2s ease;
  }
  
  .overlay .back-link:hover {
    color: rgba(255, 180, 120, 1);
  }
</style>

<script>
import * as THREE from 'three';

const vertexShader = `
  varying vec2 vUv;
  
  void main() {
    vUv = uv;
    gl_Position = projectionMatrix * modelViewMatrix * vec4(position, 1.0);
  }
`;

const fragmentShader = `
  precision highp float;
  
  uniform float uTime;
  uniform vec2 uMouse;
  uniform vec2 uResolution;
  uniform float uMouseInfluence;
  varying vec2 vUv;
  
  // ============ NOISE FUNCTIONS ============
  
  vec3 mod289(vec3 x) { return x - floor(x * (1.0 / 289.0)) * 289.0; }
  vec4 mod289(vec4 x) { return x - floor(x * (1.0 / 289.0)) * 289.0; }
  vec4 permute(vec4 x) { return mod289(((x*34.0)+1.0)*x); }
  vec4 taylorInvSqrt(vec4 r) { return 1.79284291400159 - 0.85373472095314 * r; }
  
  // 3D Simplex Noise
  float snoise3(vec3 v) {
    const vec2 C = vec2(1.0/6.0, 1.0/3.0);
    const vec4 D = vec4(0.0, 0.5, 1.0, 2.0);
    
    vec3 i  = floor(v + dot(v, C.yyy));
    vec3 x0 = v - i + dot(i, C.xxx);
    
    vec3 g = step(x0.yzx, x0.xyz);
    vec3 l = 1.0 - g;
    vec3 i1 = min(g.xyz, l.zxy);
    vec3 i2 = max(g.xyz, l.zxy);
    
    vec3 x1 = x0 - i1 + C.xxx;
    vec3 x2 = x0 - i2 + C.yyy;
    vec3 x3 = x0 - D.yyy;
    
    i = mod289(i);
    vec4 p = permute(permute(permute(
              i.z + vec4(0.0, i1.z, i2.z, 1.0))
            + i.y + vec4(0.0, i1.y, i2.y, 1.0))
            + i.x + vec4(0.0, i1.x, i2.x, 1.0));
    
    float n_ = 0.142857142857;
    vec3 ns = n_ * D.wyz - D.xzx;
    
    vec4 j = p - 49.0 * floor(p * ns.z * ns.z);
    
    vec4 x_ = floor(j * ns.z);
    vec4 y_ = floor(j - 7.0 * x_);
    
    vec4 x = x_ *ns.x + ns.yyyy;
    vec4 y = y_ *ns.x + ns.yyyy;
    vec4 h = 1.0 - abs(x) - abs(y);
    
    vec4 b0 = vec4(x.xy, y.xy);
    vec4 b1 = vec4(x.zw, y.zw);
    
    vec4 s0 = floor(b0)*2.0 + 1.0;
    vec4 s1 = floor(b1)*2.0 + 1.0;
    vec4 sh = -step(h, vec4(0.0));
    
    vec4 a0 = b0.xzyw + s0.xzyw*sh.xxyy;
    vec4 a1 = b1.xzyw + s1.xzyw*sh.zzww;
    
    vec3 p0 = vec3(a0.xy, h.x);
    vec3 p1 = vec3(a0.zw, h.y);
    vec3 p2 = vec3(a1.xy, h.z);
    vec3 p3 = vec3(a1.zw, h.w);
    
    vec4 norm = taylorInvSqrt(vec4(dot(p0,p0), dot(p1,p1), dot(p2,p2), dot(p3,p3)));
    p0 *= norm.x;
    p1 *= norm.y;
    p2 *= norm.z;
    p3 *= norm.w;
    
    vec4 m = max(0.6 - vec4(dot(x0,x0), dot(x1,x1), dot(x2,x2), dot(x3,x3)), 0.0);
    m = m * m;
    return 42.0 * dot(m*m, vec4(dot(p0,x0), dot(p1,x1), dot(p2,x2), dot(p3,x3)));
  }
  
  // 2D Simplex Noise  
  float snoise(vec2 v) {
    return snoise3(vec3(v, 0.0));
  }
  
  // Hash functions
  float hash(vec2 p) {
    return fract(sin(dot(p, vec2(127.1, 311.7))) * 43758.5453);
  }
  
  vec2 hash2(vec2 p) {
    p = vec2(dot(p, vec2(127.1, 311.7)), dot(p, vec2(269.5, 183.3)));
    return fract(sin(p) * 43758.5453);
  }
  
  // FBM - Fractal Brownian Motion
  float fbm(vec2 p, int octaves) {
    float value = 0.0;
    float amplitude = 0.5;
    float frequency = 1.0;
    for(int i = 0; i < 8; i++) {
      if(i >= octaves) break;
      value += amplitude * snoise(p * frequency);
      amplitude *= 0.5;
      frequency *= 2.0;
    }
    return value;
  }
  
  // Turbulence (absolute value FBM)
  float turbulence(vec2 p, int octaves) {
    float value = 0.0;
    float amplitude = 0.5;
    float frequency = 1.0;
    for(int i = 0; i < 8; i++) {
      if(i >= octaves) break;
      value += amplitude * abs(snoise(p * frequency));
      amplitude *= 0.5;
      frequency *= 2.0;
    }
    return value;
  }
  
  // Ridged noise for cracks
  float ridged(vec2 p, int octaves) {
    float value = 0.0;
    float amplitude = 0.5;
    float frequency = 1.0;
    float prev = 1.0;
    for(int i = 0; i < 8; i++) {
      if(i >= octaves) break;
      float n = 1.0 - abs(snoise(p * frequency));
      n = n * n;
      value += n * amplitude * prev;
      prev = n;
      amplitude *= 0.5;
      frequency *= 2.1;
    }
    return value;
  }
  
  // ============ VORONOI FOR ROCK PLATES ============
  
  vec4 voronoi(vec2 p) {
    vec2 n = floor(p);
    vec2 f = fract(p);
    
    float md1 = 8.0;
    float md2 = 8.0;
    vec2 cellId = vec2(0.0);
    
    for(int j = -2; j <= 2; j++) {
      for(int i = -2; i <= 2; i++) {
        vec2 g = vec2(float(i), float(j));
        vec2 o = hash2(n + g);
        o = 0.5 + 0.45 * sin(6.2831 * o + 0.1);
        vec2 r = g + o - f;
        float d = dot(r, r);
        
        if(d < md1) {
          md2 = md1;
          md1 = d;
          cellId = n + g;
        } else if(d < md2) {
          md2 = d;
        }
      }
    }
    
    return vec4(sqrt(md1), sqrt(md2), cellId);
  }
  
  // Edge distance for voronoi (for cracks)
  float voronoiEdge(vec2 p) {
    vec2 n = floor(p);
    vec2 f = fract(p);
    
    vec2 mg, mr;
    float md = 8.0;
    
    for(int j = -1; j <= 1; j++) {
      for(int i = -1; i <= 1; i++) {
        vec2 g = vec2(float(i), float(j));
        vec2 o = hash2(n + g);
        o = 0.5 + 0.45 * sin(6.2831 * o);
        vec2 r = g + o - f;
        float d = dot(r, r);
        
        if(d < md) {
          md = d;
          mr = r;
          mg = g;
        }
      }
    }
    
    md = 8.0;
    for(int j = -2; j <= 2; j++) {
      for(int i = -2; i <= 2; i++) {
        vec2 g = mg + vec2(float(i), float(j));
        vec2 o = hash2(n + g);
        o = 0.5 + 0.45 * sin(6.2831 * o);
        vec2 r = g + o - f;
        
        if(dot(mr - r, mr - r) > 0.00001) {
          md = min(md, dot(0.5 * (mr + r), normalize(r - mr)));
        }
      }
    }
    
    return md;
  }
  
  // ============ CRACK PATTERN ============
  
  float crackPattern(vec2 uv, float scale, float time, float mouseInfluence) {
    // Warp coordinates for organic feel
    vec2 warp = vec2(
      fbm(uv * 2.0 + 10.0, 4),
      fbm(uv * 2.0 + 20.0, 4)
    ) * 0.15;
    
    vec2 p = uv * scale + warp;
    
    // Main crack network from voronoi edges
    float edge = voronoiEdge(p);
    
    // Add ridged noise for branching cracks
    float ridges = ridged(uv * scale * 0.7, 5);
    
    // Combine for natural crack pattern
    float cracks = edge;
    cracks = min(cracks, ridges * 0.3 + 0.05);
    
    // Add fine detail noise to edges
    float detail = snoise(uv * scale * 8.0) * 0.015;
    detail += snoise(uv * scale * 16.0) * 0.008;
    cracks += detail;
    
    return cracks;
  }
  
  // ============ STONE TEXTURE ============
  
  vec3 stoneTexture(vec2 uv, float time) {
    // Multi-scale FBM for realistic basalt
    float large = fbm(uv * 2.0, 5) * 0.4;
    float medium = fbm(uv * 5.0 + 100.0, 4) * 0.25;
    float small = fbm(uv * 12.0 + 200.0, 3) * 0.15;
    float micro = snoise(uv * 30.0) * 0.08;
    float fine = snoise(uv * 60.0) * 0.04;
    float ultra = snoise(uv * 120.0) * 0.02;
    
    float height = large + medium + small + micro + fine + ultra;
    
    // Normalize to 0-1 range
    height = height * 0.5 + 0.5;
    
    // Color variation based on height
    vec3 darkBasalt = vec3(0.02, 0.02, 0.025);
    vec3 midBasalt = vec3(0.06, 0.055, 0.065);
    vec3 lightBasalt = vec3(0.12, 0.11, 0.13);
    vec3 highlight = vec3(0.18, 0.16, 0.19);
    
    vec3 color = darkBasalt;
    color = mix(color, midBasalt, smoothstep(0.3, 0.5, height));
    color = mix(color, lightBasalt, smoothstep(0.5, 0.7, height));
    color = mix(color, highlight, smoothstep(0.75, 0.95, height) * 0.5);
    
    // Add color variation
    float colorVar = snoise(uv * 8.0 + 50.0);
    color *= 0.9 + colorVar * 0.15;
    
    // Subtle blue/purple tint in shadows (like real basalt)
    float shadowTint = smoothstep(0.5, 0.2, height);
    color += vec3(-0.005, 0.0, 0.01) * shadowTint;
    
    return color;
  }
  
  // ============ LAVA TEXTURE ============
  
  vec3 lavaTexture(vec2 uv, float time, float intensity) {
    // Flowing lava effect
    vec2 flow = uv;
    flow.x += time * 0.02;
    flow.y += sin(uv.x * 3.0 + time * 0.5) * 0.02;
    
    // Multi-scale noise for lava surface
    float n1 = snoise(flow * 3.0 + time * 0.1) * 0.5 + 0.5;
    float n2 = snoise(flow * 6.0 - time * 0.15) * 0.5 + 0.5;
    float n3 = snoise(flow * 12.0 + time * 0.08) * 0.5 + 0.5;
    
    float lavaPattern = n1 * 0.5 + n2 * 0.3 + n3 * 0.2;
    
    // Temperature variation
    float temp = lavaPattern * intensity;
    temp = pow(temp, 0.7); // Boost midtones
    
    // Schlieren/streaks
    float streaks = abs(snoise(vec2(uv.x * 20.0 + time * 0.3, uv.y * 2.0)));
    streaks = pow(streaks, 3.0) * 0.3;
    temp += streaks * intensity;
    
    // Lava color gradient (photorealistic)
    vec3 darkCrust = vec3(0.15, 0.02, 0.0);
    vec3 darkRed = vec3(0.4, 0.05, 0.0);
    vec3 red = vec3(0.7, 0.15, 0.0);
    vec3 orange = vec3(0.95, 0.4, 0.05);
    vec3 yellow = vec3(1.0, 0.7, 0.2);
    vec3 white = vec3(1.0, 0.9, 0.6);
    
    vec3 color = darkCrust;
    color = mix(color, darkRed, smoothstep(0.0, 0.2, temp));
    color = mix(color, red, smoothstep(0.2, 0.4, temp));
    color = mix(color, orange, smoothstep(0.4, 0.6, temp));
    color = mix(color, yellow, smoothstep(0.6, 0.8, temp));
    color = mix(color, white, smoothstep(0.85, 1.0, temp) * 0.7);
    
    // Pulsing glow
    float pulse = sin(time * 0.8 + lavaPattern * 6.28) * 0.1 + 1.0;
    color *= pulse;
    
    return color;
  }
  
  // ============ MOUSE INFLUENCE (SUBTLE) ============
  
  float getMouseInfluence(vec2 uv, vec2 mouse, float baseInfluence, float time) {
    vec2 aspect = vec2(uResolution.x / uResolution.y, 1.0);
    vec2 uvAspect = uv * aspect;
    vec2 mouseAspect = mouse * aspect;
    
    float dist = distance(uvAspect, mouseAspect);
    
    // Add noise to distance for irregular falloff
    float noise = snoise(uv * 5.0 + time * 0.1) * 0.08;
    noise += snoise(uv * 10.0 - time * 0.15) * 0.04;
    dist += noise;
    
    // Soft, irregular falloff
    float influence = smoothstep(0.5, 0.0, dist);
    influence = pow(influence, 1.5); // Make falloff more gradual
    
    // Add directional variation
    float angle = atan(uvAspect.y - mouseAspect.y, uvAspect.x - mouseAspect.x);
    float angleVar = sin(angle * 5.0 + time * 0.3) * 0.15 + 1.0;
    influence *= angleVar;
    
    return influence * baseInfluence;
  }
  
  // ============ MAIN ============
  
  void main() {
    vec2 uv = vUv;
    float time = uTime;
    
    // Get mouse influence with noise distortion
    float mouseInf = getMouseInfluence(uv, uMouse, uMouseInfluence, time);
    
    // ===== CRACK GENERATION =====
    
    // Multiple scales of cracks
    float crack1 = crackPattern(uv, 3.0, time, mouseInf);
    float crack2 = crackPattern(uv + 50.0, 5.0, time, mouseInf);
    float crack3 = crackPattern(uv + 100.0, 8.0, time, mouseInf);
    
    // Base crack widths (always visible hairline cracks)
    float baseWidth1 = 0.02;
    float baseWidth2 = 0.015;
    float baseWidth3 = 0.01;
    
    // Width expansion based on mouse influence
    // Use noise to make expansion uneven
    float expandNoise = snoise(uv * 3.0) * 0.5 + 0.5;
    float expandNoise2 = snoise(uv * 6.0 + 30.0) * 0.5 + 0.5;
    
    float width1 = baseWidth1 + mouseInf * 0.15 * expandNoise;
    float width2 = baseWidth2 + mouseInf * 0.08 * expandNoise2;
    float width3 = baseWidth3 + mouseInf * 0.04 * expandNoise;
    
    // Create crack masks with soft edges
    float crackMask1 = 1.0 - smoothstep(0.0, width1, crack1);
    float crackMask2 = 1.0 - smoothstep(0.0, width2, crack2);
    float crackMask3 = 1.0 - smoothstep(0.0, width3, crack3);
    
    // Combine cracks
    float crackMask = max(crackMask1, max(crackMask2 * 0.8, crackMask3 * 0.5));
    
    // Crack depth (for lava intensity)
    float crackDepth = crackMask1 * 1.0 + crackMask2 * 0.6 + crackMask3 * 0.3;
    crackDepth = clamp(crackDepth, 0.0, 1.0);
    
    // Glow around cracks
    float glowWidth1 = width1 * 3.0;
    float glowWidth2 = width2 * 2.5;
    float crackGlow = (1.0 - smoothstep(0.0, glowWidth1, crack1)) * 0.5;
    crackGlow += (1.0 - smoothstep(0.0, glowWidth2, crack2)) * 0.3;
    crackGlow = clamp(crackGlow, 0.0, 1.0);
    
    // ===== STONE SURFACE =====
    
    vec3 stone = stoneTexture(uv, time);
    
    // Add voronoi-based plate variation
    vec4 plates = voronoi(uv * 2.5);
    float plateVar = hash(plates.zw);
    stone *= 0.85 + plateVar * 0.3;
    
    // Darken stone near cracks (depth shadow)
    stone *= 1.0 - crackGlow * 0.4;
    
    // ===== LAVA =====
    
    // Lava only visible in cracks
    float lavaIntensity = crackDepth * (0.5 + mouseInf * 0.8);
    vec3 lava = lavaTexture(uv, time, lavaIntensity);
    
    // Boost lava near mouse
    lava *= 1.0 + mouseInf * 0.5;
    
    // ===== COMPOSITE =====
    
    vec3 final = stone;
    
    // Subsurface glow (subtle orange tint near cracks)
    vec3 subsurface = vec3(0.1, 0.02, 0.0) * crackGlow * (0.3 + mouseInf * 0.5);
    final += subsurface;
    
    // Mix in lava where cracks are
    float lavaMix = smoothstep(0.1, 0.4, crackMask);
    final = mix(final, lava, lavaMix);
    
    // Edge glow (rim light around cracks)
    float rim = crackGlow - crackMask * 0.5;
    rim = max(rim, 0.0);
    final += vec3(0.2, 0.05, 0.0) * rim * (0.5 + mouseInf);
    
    // ===== POST PROCESSING =====
    
    // Vignette
    float vignette = 1.0 - smoothstep(0.4, 1.2, length(uv - 0.5) * 1.1);
    final *= 0.85 + vignette * 0.15;
    
    // Slight contrast boost
    final = pow(final, vec3(0.95));
    
    // Subtle film grain for realism
    float grain = hash(uv * 1000.0 + time) * 0.02;
    final += grain - 0.01;
    
    gl_FragColor = vec4(final, 1.0);
  }
`;

function init() {
  const canvas = document.getElementById('shader-canvas') as HTMLCanvasElement;
  if (!canvas) return;
  
  const renderer = new THREE.WebGLRenderer({ 
    canvas, 
    antialias: true,
    powerPreference: 'high-performance'
  });
  renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
  renderer.setSize(window.innerWidth, window.innerHeight);
  
  const scene = new THREE.Scene();
  const camera = new THREE.OrthographicCamera(-1, 1, 1, -1, 0.1, 10);
  camera.position.z = 1;
  
  const uniforms = {
    uTime: { value: 0 },
    uMouse: { value: new THREE.Vector2(0.5, 0.5) },
    uResolution: { value: new THREE.Vector2(window.innerWidth, window.innerHeight) },
    uMouseInfluence: { value: 0.3 }
  };
  
  const material = new THREE.ShaderMaterial({
    vertexShader,
    fragmentShader,
    uniforms
  });
  
  const mesh = new THREE.Mesh(new THREE.PlaneGeometry(2, 2), material);
  scene.add(mesh);
  
  const targetMouse = new THREE.Vector2(0.5, 0.5);
  const currentMouse = new THREE.Vector2(0.5, 0.5);
  let targetInfluence = 0.3;
  let currentInfluence = 0.3;
  let lastMouseMove = Date.now();
  
  document.addEventListener('mousemove', (e) => {
    targetMouse.x = e.clientX / window.innerWidth;
    targetMouse.y = 1.0 - (e.clientY / window.innerHeight);
    lastMouseMove = Date.now();
    
    // Gradually increase influence as mouse moves
    targetInfluence = Math.min(1.0, targetInfluence + 0.1);
  });
  
  document.addEventListener('mouseleave', () => {
    targetInfluence = 0.2;
  });
  
  document.addEventListener('touchmove', (e) => {
    if (e.touches.length > 0) {
      targetMouse.x = e.touches[0].clientX / window.innerWidth;
      targetMouse.y = 1.0 - (e.touches[0].clientY / window.innerHeight);
      lastMouseMove = Date.now();
      targetInfluence = 1.0;
    }
  });
  
  document.addEventListener('touchend', () => {
    targetInfluence = 0.3;
  });
  
  window.addEventListener('resize', () => {
    renderer.setSize(window.innerWidth, window.innerHeight);
    uniforms.uResolution.value.set(window.innerWidth, window.innerHeight);
  });
  
  function animate() {
    requestAnimationFrame(animate);
    
    uniforms.uTime.value += 0.016;
    
    // Smooth mouse following
    currentMouse.x += (targetMouse.x - currentMouse.x) * 0.04;
    currentMouse.y += (targetMouse.y - currentMouse.y) * 0.04;
    uniforms.uMouse.value.copy(currentMouse);
    
    // Decay influence when mouse is still
    if (Date.now() - lastMouseMove > 1500) {
      targetInfluence = Math.max(0.2, targetInfluence - 0.005);
    }
    
    // Smooth influence changes
    const speed = currentInfluence < targetInfluence ? 0.02 : 0.008;
    currentInfluence += (targetInfluence - currentInfluence) * speed;
    uniforms.uMouseInfluence.value = currentInfluence;
    
    renderer.render(scene, camera);
  }
  
  animate();
}

if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', init);
} else {
  init();
}
</script>
