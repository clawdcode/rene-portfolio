---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Shader Prototype | René Portfolio">
  <main class="shader-page">
    <canvas id="shader-canvas"></canvas>
    <div class="overlay">
      <h1>Shader Prototype</h1>
      <p>Move your mouse to reveal the heat beneath</p>
      <a href="/" class="back-link">← Back to Portfolio</a>
    </div>
  </main>
</Layout>

<style>
  .shader-page {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background: #000;
  }
  
  #shader-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .overlay {
    position: absolute;
    bottom: 40px;
    left: 40px;
    z-index: 10;
    pointer-events: none;
  }
  
  .overlay h1 {
    font-size: 1.5rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.8);
  }
  
  .overlay p {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
  }
  
  .overlay .back-link {
    pointer-events: auto;
    font-size: 0.875rem;
    color: rgba(255, 150, 100, 0.8);
    transition: color 0.2s ease;
  }
  
  .overlay .back-link:hover {
    color: rgba(255, 180, 120, 1);
  }
</style>

<script>
import * as THREE from 'three';

const vertexShader = `
  varying vec2 vUv;
  
  void main() {
    vUv = uv;
    gl_Position = projectionMatrix * modelViewMatrix * vec4(position, 1.0);
  }
`;

const fragmentShader = `
  precision highp float;
  
  uniform float uTime;
  uniform vec2 uMouse;
  uniform vec2 uResolution;
  varying vec2 vUv;
  
  // Hash functions
  float hash(vec2 p) {
    return fract(sin(dot(p, vec2(127.1, 311.7))) * 43758.5453);
  }
  
  vec2 hash2(vec2 p) {
    p = vec2(dot(p, vec2(127.1, 311.7)), dot(p, vec2(269.5, 183.3)));
    return fract(sin(p) * 43758.5453);
  }
  
  vec3 hash3(vec2 p) {
    vec3 q = vec3(dot(p, vec2(127.1, 311.7)), dot(p, vec2(269.5, 183.3)), dot(p, vec2(419.2, 371.9)));
    return fract(sin(q) * 43758.5453);
  }
  
  // Value noise
  float valueNoise(vec2 p) {
    vec2 i = floor(p);
    vec2 f = fract(p);
    f = f * f * (3.0 - 2.0 * f);
    
    float a = hash(i);
    float b = hash(i + vec2(1.0, 0.0));
    float c = hash(i + vec2(0.0, 1.0));
    float d = hash(i + vec2(1.0, 1.0));
    
    return mix(mix(a, b, f.x), mix(c, d, f.x), f.y);
  }
  
  // FBM with ridged noise for rocky texture
  float fbm(vec2 p) {
    float value = 0.0;
    float amplitude = 0.5;
    for(int i = 0; i < 6; i++) {
      value += amplitude * valueNoise(p);
      amplitude *= 0.5;
      p *= 2.0;
    }
    return value;
  }
  
  // Ridged FBM for sharp rocky features
  float ridgedFBM(vec2 p) {
    float value = 0.0;
    float amplitude = 0.5;
    for(int i = 0; i < 5; i++) {
      float n = valueNoise(p);
      n = 1.0 - abs(n * 2.0 - 1.0); // Ridge
      n = n * n;
      value += amplitude * n;
      amplitude *= 0.5;
      p *= 2.0;
    }
    return value;
  }
  
  // Voronoi with variable width cracks
  vec3 voronoiCracks(vec2 p) {
    vec2 n = floor(p);
    vec2 f = fract(p);
    
    float md = 8.0;
    float md2 = 8.0;
    vec2 mg;
    
    for(int j = -1; j <= 1; j++) {
      for(int i = -1; i <= 1; i++) {
        vec2 g = vec2(float(i), float(j));
        vec2 o = hash2(n + g);
        o = 0.5 + 0.4 * sin(6.2831 * o); // Slight jitter
        vec2 r = g + o - f;
        float d = dot(r, r);
        
        if(d < md) {
          md2 = md;
          md = d;
          mg = g;
        } else if(d < md2) {
          md2 = d;
        }
      }
    }
    
    // Return: edge distance, cell id noise, cell distance
    float edge = sqrt(md2) - sqrt(md);
    float cellId = hash(n + mg);
    return vec3(edge, cellId, sqrt(md));
  }
  
  // Multi-scale crack system
  float getCrackIntensity(vec2 uv, out float crackWidth) {
    // Primary large cracks
    vec3 v1 = voronoiCracks(uv * 3.5);
    float edge1 = v1.x;
    float width1 = 0.04 + v1.y * 0.03; // Variable width
    float crack1 = 1.0 - smoothstep(0.0, width1, edge1);
    
    // Secondary medium cracks
    vec3 v2 = voronoiCracks(uv * 7.0 + 50.0);
    float edge2 = v2.x;
    float width2 = 0.025 + v2.y * 0.02;
    float crack2 = 1.0 - smoothstep(0.0, width2, edge2);
    crack2 *= 0.7; // Less intense
    
    // Tertiary fine cracks
    vec3 v3 = voronoiCracks(uv * 14.0 + 100.0);
    float edge3 = v3.x;
    float width3 = 0.015 + v3.y * 0.01;
    float crack3 = 1.0 - smoothstep(0.0, width3, edge3);
    crack3 *= 0.4;
    
    // Combine with hierarchy
    float cracks = max(crack1, max(crack2, crack3));
    crackWidth = crack1 > crack2 && crack1 > crack3 ? width1 : 
                 crack2 > crack3 ? width2 : width3;
    
    return cracks;
  }
  
  // Stone surface with displacement look
  vec3 getStoneColor(vec2 uv, float mouseInfluence) {
    // Multiple noise layers for realistic stone
    float n1 = fbm(uv * 8.0);
    float n2 = fbm(uv * 16.0 + 100.0);
    float n3 = ridgedFBM(uv * 6.0 + 50.0);
    float n4 = valueNoise(uv * 32.0); // Fine grain
    
    // Combine for layered rock texture
    float surface = n1 * 0.4 + n2 * 0.3 + n3 * 0.2 + n4 * 0.1;
    
    // Base colors - very dark basalt
    vec3 darkest = vec3(0.012, 0.012, 0.015);
    vec3 dark = vec3(0.04, 0.038, 0.042);
    vec3 mid = vec3(0.08, 0.075, 0.08);
    vec3 highlight = vec3(0.12, 0.11, 0.115);
    
    // Build color based on surface noise
    vec3 color = mix(darkest, dark, smoothstep(0.3, 0.5, surface));
    color = mix(color, mid, smoothstep(0.5, 0.7, surface));
    color = mix(color, highlight, smoothstep(0.7, 0.9, surface) * 0.5);
    
    // Add ridged highlights for that rocky feel
    float ridges = ridgedFBM(uv * 10.0);
    color += vec3(0.02) * ridges * ridges;
    
    // Subtle surface variation
    color *= 0.9 + n4 * 0.2;
    
    // Near mouse, add subtle warm reflection
    color += vec3(0.02, 0.01, 0.005) * mouseInfluence * surface;
    
    return color;
  }
  
  // Lava color with temperature gradient
  vec3 getLavaColor(float intensity, float distFromEdge, float mouseInfluence) {
    // Temperature-based colors
    vec3 coolEdge = vec3(0.25, 0.02, 0.0);     // Dark red at edges
    vec3 warm = vec3(0.6, 0.1, 0.0);           // Red-orange
    vec3 hot = vec3(1.0, 0.4, 0.0);            // Orange
    vec3 veryHot = vec3(1.0, 0.7, 0.15);       // Yellow-orange
    vec3 white = vec3(1.0, 0.95, 0.6);         // White-hot core
    
    // Gradient from edge to center
    float t = pow(distFromEdge, 0.7);
    
    vec3 color = mix(coolEdge, warm, smoothstep(0.0, 0.3, t));
    color = mix(color, hot, smoothstep(0.2, 0.5, t));
    color = mix(color, veryHot, smoothstep(0.4, 0.75, t));
    color = mix(color, white, smoothstep(0.7, 1.0, t) * 0.6);
    
    // Boost near mouse
    float boost = mouseInfluence * 0.4;
    color = mix(color, white, boost * t * t);
    
    // Pulsing glow
    float pulse = sin(uTime * 1.5) * 0.1 + 0.9;
    color *= pulse;
    
    return color * intensity;
  }
  
  void main() {
    vec2 uv = vUv;
    vec2 aspect = vec2(uResolution.x / uResolution.y, 1.0);
    vec2 uvAspect = uv * aspect;
    vec2 mouseAspect = uMouse * aspect;
    
    // Mouse influence
    float dist = distance(uvAspect, mouseAspect);
    float mouseInfluence = smoothstep(0.7, 0.0, dist);
    float mouseWide = smoothstep(1.0, 0.0, dist);
    
    // Get crack pattern
    float crackWidth;
    float cracks = getCrackIntensity(uv, crackWidth);
    
    // Calculate distance from crack edge for gradient
    vec3 v1 = voronoiCracks(uv * 3.5);
    float primaryEdge = v1.x;
    float normalizedDist = 1.0 - smoothstep(0.0, 0.05, primaryEdge);
    normalizedDist = pow(normalizedDist, 0.8);
    
    // Stone surface
    vec3 stone = getStoneColor(uv, mouseInfluence);
    
    // Darken stone near cracks (depth effect)
    float crackShadow = smoothstep(0.15, 0.0, primaryEdge);
    stone *= 1.0 - crackShadow * 0.4;
    
    // === LAVA ===
    // Lava visibility based on mouse
    float lavaVisibility = mix(0.25, 1.0, mouseWide);
    
    // Lava intensity in cracks
    float lavaIntensity = cracks * lavaVisibility;
    
    // Get lava color with gradient
    vec3 lava = getLavaColor(lavaIntensity, normalizedDist * cracks, mouseInfluence);
    
    // === COMBINE ===
    vec3 finalColor = stone;
    
    // Add lava
    finalColor = mix(finalColor, lava, cracks * lavaVisibility);
    
    // Add bloom/glow around bright cracks
    float glowAmount = cracks * normalizedDist * mouseInfluence;
    vec3 glowColor = vec3(0.4, 0.1, 0.0);
    
    // Glow extends beyond crack edges
    float glowExtent = smoothstep(0.2, 0.0, primaryEdge) * mouseInfluence * 0.3;
    finalColor += glowColor * glowExtent;
    
    // Secondary crack glow
    vec3 v2 = voronoiCracks(uv * 7.0 + 50.0);
    float glow2 = smoothstep(0.12, 0.0, v2.x) * mouseInfluence * 0.15;
    finalColor += glowColor * glow2;
    
    // === POST ===
    // Vignette
    float vignette = 1.0 - smoothstep(0.4, 1.5, length(uv - 0.5) * 1.3);
    finalColor *= vignette * 0.25 + 0.75;
    
    // Slight contrast
    finalColor = pow(finalColor, vec3(1.05));
    
    // Clamp
    finalColor = clamp(finalColor, 0.0, 1.0);
    
    gl_FragColor = vec4(finalColor, 1.0);
  }
`;

function init() {
  const canvas = document.getElementById('shader-canvas') as HTMLCanvasElement;
  if (!canvas) return;
  
  const renderer = new THREE.WebGLRenderer({ 
    canvas, 
    antialias: true,
    powerPreference: 'high-performance'
  });
  renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
  renderer.setSize(window.innerWidth, window.innerHeight);
  
  const scene = new THREE.Scene();
  const camera = new THREE.OrthographicCamera(-1, 1, 1, -1, 0.1, 10);
  camera.position.z = 1;
  
  const uniforms = {
    uTime: { value: 0 },
    uMouse: { value: new THREE.Vector2(0.5, 0.5) },
    uResolution: { value: new THREE.Vector2(window.innerWidth, window.innerHeight) }
  };
  
  const material = new THREE.ShaderMaterial({
    vertexShader,
    fragmentShader,
    uniforms
  });
  
  const mesh = new THREE.Mesh(new THREE.PlaneGeometry(2, 2), material);
  scene.add(mesh);
  
  const targetMouse = new THREE.Vector2(0.5, 0.5);
  const currentMouse = new THREE.Vector2(0.5, 0.5);
  
  document.addEventListener('mousemove', (e) => {
    targetMouse.x = e.clientX / window.innerWidth;
    targetMouse.y = 1.0 - (e.clientY / window.innerHeight);
  });
  
  document.addEventListener('touchmove', (e) => {
    if (e.touches.length > 0) {
      targetMouse.x = e.touches[0].clientX / window.innerWidth;
      targetMouse.y = 1.0 - (e.touches[0].clientY / window.innerHeight);
    }
  });
  
  window.addEventListener('resize', () => {
    renderer.setSize(window.innerWidth, window.innerHeight);
    uniforms.uResolution.value.set(window.innerWidth, window.innerHeight);
  });
  
  function animate() {
    requestAnimationFrame(animate);
    
    uniforms.uTime.value += 0.016;
    
    currentMouse.x += (targetMouse.x - currentMouse.x) * 0.08;
    currentMouse.y += (targetMouse.y - currentMouse.y) * 0.08;
    uniforms.uMouse.value.copy(currentMouse);
    
    renderer.render(scene, camera);
  }
  
  animate();
}

if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', init);
} else {
  init();
}
</script>
