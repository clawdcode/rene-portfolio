---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Shader Prototype | René Portfolio">
  <main class="shader-page">
    <canvas id="shader-canvas"></canvas>
    <div class="overlay">
      <h1>Shader Prototype</h1>
      <p>Move your mouse to reveal the heat beneath</p>
      <a href="/" class="back-link">← Back to Portfolio</a>
    </div>
  </main>
</Layout>

<style>
  .shader-page {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background: #000;
  }
  
  #shader-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .overlay {
    position: absolute;
    bottom: 40px;
    left: 40px;
    z-index: 10;
    pointer-events: none;
  }
  
  .overlay h1 {
    font-size: 1.5rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.8);
  }
  
  .overlay p {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
  }
  
  .overlay .back-link {
    pointer-events: auto;
    font-size: 0.875rem;
    color: rgba(255, 150, 100, 0.8);
    transition: color 0.2s ease;
  }
  
  .overlay .back-link:hover {
    color: rgba(255, 180, 120, 1);
  }
</style>

<script>
import * as THREE from 'three';

const vertexShader = `
  varying vec2 vUv;
  
  void main() {
    vUv = uv;
    gl_Position = projectionMatrix * modelViewMatrix * vec4(position, 1.0);
  }
`;

const fragmentShader = `
  precision highp float;
  
  uniform float uTime;
  uniform vec2 uMouse;
  uniform vec2 uResolution;
  varying vec2 vUv;
  
  // Hash functions
  float hash(vec2 p) {
    return fract(sin(dot(p, vec2(127.1, 311.7))) * 43758.5453);
  }
  
  vec2 hash2(vec2 p) {
    p = vec2(dot(p, vec2(127.1, 311.7)), dot(p, vec2(269.5, 183.3)));
    return fract(sin(p) * 43758.5453);
  }
  
  // Improved noise
  float noise(vec2 p) {
    vec2 i = floor(p);
    vec2 f = fract(p);
    f = f * f * (3.0 - 2.0 * f);
    
    float a = hash(i);
    float b = hash(i + vec2(1.0, 0.0));
    float c = hash(i + vec2(0.0, 1.0));
    float d = hash(i + vec2(1.0, 1.0));
    
    return mix(mix(a, b, f.x), mix(c, d, f.x), f.y);
  }
  
  // FBM
  float fbm(vec2 p, int octaves) {
    float value = 0.0;
    float amplitude = 0.5;
    for(int i = 0; i < 6; i++) {
      if(i >= octaves) break;
      value += amplitude * noise(p);
      amplitude *= 0.5;
      p *= 2.0;
    }
    return value;
  }
  
  // Voronoi with F1 and F2 distances
  vec4 voronoi(vec2 p) {
    vec2 n = floor(p);
    vec2 f = fract(p);
    
    float md1 = 8.0;  // First closest
    float md2 = 8.0;  // Second closest
    vec2 mr;          // Relative pos to closest
    
    for(int j = -1; j <= 1; j++) {
      for(int i = -1; i <= 1; i++) {
        vec2 g = vec2(float(i), float(j));
        vec2 o = hash2(n + g);
        o = 0.5 + 0.45 * sin(6.2831 * o + 0.5);
        vec2 r = g + o - f;
        float d = dot(r, r);
        
        if(d < md1) {
          md2 = md1;
          md1 = d;
          mr = r;
        } else if(d < md2) {
          md2 = d;
        }
      }
    }
    
    return vec4(sqrt(md1), sqrt(md2), mr);
  }
  
  // Edge distance (crack width)
  float voronoiEdge(vec2 p) {
    vec4 v = voronoi(p);
    return v.y - v.x;
  }
  
  void main() {
    vec2 uv = vUv;
    vec2 aspect = vec2(uResolution.x / uResolution.y, 1.0);
    vec2 uvAspect = uv * aspect;
    vec2 mouseAspect = uMouse * aspect;
    
    // Mouse influence with smooth falloff
    float dist = distance(uvAspect, mouseAspect);
    float mouseInfluence = smoothstep(0.6, 0.0, dist);
    float mouseWide = smoothstep(1.0, 0.0, dist);
    
    // === CRACK SYSTEM ===
    // Large primary cracks - thick
    float scale1 = 3.0;
    float edge1 = voronoiEdge(uv * scale1);
    float crackWidth1 = 0.08 + noise(uv * 5.0) * 0.04; // Variable width
    float crack1 = 1.0 - smoothstep(0.0, crackWidth1, edge1);
    float crackCore1 = 1.0 - smoothstep(0.0, crackWidth1 * 0.3, edge1);
    float crackGlow1 = 1.0 - smoothstep(0.0, crackWidth1 * 2.5, edge1);
    
    // Medium secondary cracks
    float scale2 = 6.0;
    float edge2 = voronoiEdge(uv * scale2 + 50.0);
    float crackWidth2 = 0.05 + noise(uv * 8.0 + 100.0) * 0.03;
    float crack2 = 1.0 - smoothstep(0.0, crackWidth2, edge2);
    float crackCore2 = 1.0 - smoothstep(0.0, crackWidth2 * 0.3, edge2);
    float crackGlow2 = 1.0 - smoothstep(0.0, crackWidth2 * 2.0, edge2);
    
    // Fine tertiary cracks
    float scale3 = 12.0;
    float edge3 = voronoiEdge(uv * scale3 + 100.0);
    float crackWidth3 = 0.03 + noise(uv * 12.0 + 200.0) * 0.02;
    float crack3 = 1.0 - smoothstep(0.0, crackWidth3, edge3);
    float crackCore3 = 1.0 - smoothstep(0.0, crackWidth3 * 0.3, edge3);
    float crackGlow3 = 1.0 - smoothstep(0.0, crackWidth3 * 1.5, edge3);
    
    // Combine cracks
    float cracks = max(crack1, max(crack2 * 0.8, crack3 * 0.5));
    float crackCore = max(crackCore1, max(crackCore2 * 0.7, crackCore3 * 0.4));
    float crackGlow = max(crackGlow1, max(crackGlow2 * 0.6, crackGlow3 * 0.3));
    
    // === STONE TEXTURE ===
    // Multi-octave noise for rocky surface
    float stone1 = fbm(uv * 8.0, 5);
    float stone2 = fbm(uv * 16.0 + 50.0, 4);
    float stone3 = fbm(uv * 32.0 + 100.0, 3);
    
    // Combine for realistic basalt
    float stoneHeight = stone1 * 0.5 + stone2 * 0.3 + stone3 * 0.2;
    
    // Add sharp features
    float sharpNoise = noise(uv * 20.0);
    sharpNoise = pow(sharpNoise, 2.0);
    stoneHeight += sharpNoise * 0.15;
    
    // Stone colors - very dark basalt
    vec3 basaltBlack = vec3(0.015, 0.015, 0.018);
    vec3 basaltDark = vec3(0.045, 0.042, 0.048);
    vec3 basaltMid = vec3(0.085, 0.08, 0.088);
    vec3 basaltLight = vec3(0.13, 0.12, 0.13);
    
    // Build stone color from height
    vec3 stoneColor = basaltBlack;
    stoneColor = mix(stoneColor, basaltDark, smoothstep(0.25, 0.45, stoneHeight));
    stoneColor = mix(stoneColor, basaltMid, smoothstep(0.45, 0.65, stoneHeight));
    stoneColor = mix(stoneColor, basaltLight, smoothstep(0.7, 0.9, stoneHeight) * 0.4);
    
    // Add micro detail
    float microDetail = noise(uv * 64.0);
    stoneColor *= 0.92 + microDetail * 0.16;
    
    // Darken near cracks (depth)
    stoneColor *= 1.0 - crackGlow * 0.35;
    
    // === LAVA COLORS ===
    vec3 lavaCool = vec3(0.2, 0.02, 0.0);      // Dark red edge
    vec3 lavaWarm = vec3(0.5, 0.08, 0.0);      // Deep red
    vec3 lavaHot = vec3(0.85, 0.25, 0.0);      // Red-orange
    vec3 lavaBright = vec3(1.0, 0.55, 0.05);   // Orange
    vec3 lavaWhite = vec3(1.0, 0.85, 0.35);    // Yellow-white core
    
    // Temperature based on distance from crack edge
    float temp = crackCore;
    temp = pow(temp, 0.6); // Softer falloff
    
    vec3 lavaColor = lavaCool;
    lavaColor = mix(lavaColor, lavaWarm, smoothstep(0.0, 0.25, temp));
    lavaColor = mix(lavaColor, lavaHot, smoothstep(0.15, 0.45, temp));
    lavaColor = mix(lavaColor, lavaBright, smoothstep(0.35, 0.7, temp));
    lavaColor = mix(lavaColor, lavaWhite, smoothstep(0.6, 1.0, temp) * 0.7);
    
    // Pulsing animation
    float pulse = sin(uTime * 1.2 + stoneHeight * 6.0) * 0.12 + 0.88;
    float pulse2 = sin(uTime * 0.7 + uv.x * 8.0 + uv.y * 6.0) * 0.08 + 0.92;
    lavaColor *= pulse * pulse2;
    
    // Brightness boost near mouse
    float mouseBoost = mouseInfluence * 0.5;
    lavaColor = mix(lavaColor, lavaWhite, mouseBoost * temp * 0.4);
    
    // === COMBINE ===
    // Lava visibility based on mouse
    float lavaVisibility = mix(0.35, 1.0, mouseWide);
    
    vec3 finalColor = stoneColor;
    
    // Add red glow around cracks (extends further than lava)
    vec3 redGlow = lavaCool * crackGlow * lavaVisibility * 0.8;
    finalColor += redGlow;
    
    // Add lava in cracks
    finalColor = mix(finalColor, lavaColor, cracks * lavaVisibility);
    
    // Extra bloom near mouse
    float bloom = crackGlow * mouseInfluence * 0.4;
    finalColor += vec3(0.3, 0.08, 0.0) * bloom;
    
    // === POST PROCESSING ===
    // Subtle vignette
    float vignette = 1.0 - smoothstep(0.5, 1.4, length(uv - 0.5) * 1.2);
    finalColor *= vignette * 0.3 + 0.7;
    
    // Gamma/contrast
    finalColor = pow(finalColor, vec3(1.05));
    
    gl_FragColor = vec4(finalColor, 1.0);
  }
`;

function init() {
  const canvas = document.getElementById('shader-canvas') as HTMLCanvasElement;
  if (!canvas) return;
  
  const renderer = new THREE.WebGLRenderer({ 
    canvas, 
    antialias: true,
    powerPreference: 'high-performance'
  });
  renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
  renderer.setSize(window.innerWidth, window.innerHeight);
  
  const scene = new THREE.Scene();
  const camera = new THREE.OrthographicCamera(-1, 1, 1, -1, 0.1, 10);
  camera.position.z = 1;
  
  const uniforms = {
    uTime: { value: 0 },
    uMouse: { value: new THREE.Vector2(0.5, 0.5) },
    uResolution: { value: new THREE.Vector2(window.innerWidth, window.innerHeight) }
  };
  
  const material = new THREE.ShaderMaterial({
    vertexShader,
    fragmentShader,
    uniforms
  });
  
  const mesh = new THREE.Mesh(new THREE.PlaneGeometry(2, 2), material);
  scene.add(mesh);
  
  const targetMouse = new THREE.Vector2(0.5, 0.5);
  const currentMouse = new THREE.Vector2(0.5, 0.5);
  
  document.addEventListener('mousemove', (e) => {
    targetMouse.x = e.clientX / window.innerWidth;
    targetMouse.y = 1.0 - (e.clientY / window.innerHeight);
  });
  
  document.addEventListener('touchmove', (e) => {
    if (e.touches.length > 0) {
      targetMouse.x = e.touches[0].clientX / window.innerWidth;
      targetMouse.y = 1.0 - (e.touches[0].clientY / window.innerHeight);
    }
  });
  
  window.addEventListener('resize', () => {
    renderer.setSize(window.innerWidth, window.innerHeight);
    uniforms.uResolution.value.set(window.innerWidth, window.innerHeight);
  });
  
  function animate() {
    requestAnimationFrame(animate);
    
    uniforms.uTime.value += 0.016;
    
    currentMouse.x += (targetMouse.x - currentMouse.x) * 0.08;
    currentMouse.y += (targetMouse.y - currentMouse.y) * 0.08;
    uniforms.uMouse.value.copy(currentMouse);
    
    renderer.render(scene, camera);
  }
  
  animate();
}

if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', init);
} else {
  init();
}
</script>
