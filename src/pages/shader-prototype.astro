---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Shader Prototype | René Portfolio">
  <main class="shader-page">
    <canvas id="shader-canvas"></canvas>
    <div class="overlay">
      <h1>Shader Prototype V3</h1>
      <p>Move your mouse to see the cracks open</p>
      <a href="/" class="back-link">← Back to Portfolio</a>
    </div>
  </main>
</Layout>

<style>
  .shader-page {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background: #000;
  }
  
  #shader-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .overlay {
    position: absolute;
    bottom: 40px;
    left: 40px;
    z-index: 10;
    pointer-events: none;
  }
  
  .overlay h1 {
    font-size: 1.5rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.8);
  }
  
  .overlay p {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
  }
  
  .overlay .back-link {
    pointer-events: auto;
    font-size: 0.875rem;
    color: rgba(255, 150, 100, 0.8);
    transition: color 0.2s ease;
  }
  
  .overlay .back-link:hover {
    color: rgba(255, 180, 120, 1);
  }
</style>

<script>
import * as THREE from 'three';

const vertexShader = `
  varying vec2 vUv;
  
  void main() {
    vUv = uv;
    gl_Position = projectionMatrix * modelViewMatrix * vec4(position, 1.0);
  }
`;

const fragmentShader = `
  precision highp float;
  
  uniform float uTime;
  uniform vec2 uMouse;
  uniform vec2 uResolution;
  uniform float uMouseInfluence;
  varying vec2 vUv;
  
  //=== SIMPLEX NOISE ===
  vec3 mod289(vec3 x) { return x - floor(x * (1.0 / 289.0)) * 289.0; }
  vec2 mod289(vec2 x) { return x - floor(x * (1.0 / 289.0)) * 289.0; }
  vec3 permute(vec3 x) { return mod289(((x*34.0)+1.0)*x); }
  
  float snoise(vec2 v) {
    const vec4 C = vec4(0.211324865405187, 0.366025403784439, -0.577350269189626, 0.024390243902439);
    vec2 i  = floor(v + dot(v, C.yy));
    vec2 x0 = v - i + dot(i, C.xx);
    vec2 i1 = (x0.x > x0.y) ? vec2(1.0, 0.0) : vec2(0.0, 1.0);
    vec4 x12 = x0.xyxy + C.xxzz;
    x12.xy -= i1;
    i = mod289(i);
    vec3 p = permute(permute(i.y + vec3(0.0, i1.y, 1.0)) + i.x + vec3(0.0, i1.x, 1.0));
    vec3 m = max(0.5 - vec3(dot(x0,x0), dot(x12.xy,x12.xy), dot(x12.zw,x12.zw)), 0.0);
    m = m*m; m = m*m;
    vec3 x = 2.0 * fract(p * C.www) - 1.0;
    vec3 h = abs(x) - 0.5;
    vec3 ox = floor(x + 0.5);
    vec3 a0 = x - ox;
    m *= 1.79284291400159 - 0.85373472095314 * (a0*a0 + h*h);
    vec3 g;
    g.x = a0.x * x0.x + h.x * x0.y;
    g.yz = a0.yz * x12.xz + h.yz * x12.yw;
    return 130.0 * dot(m, g);
  }
  
  float hash(vec2 p) {
    return fract(sin(dot(p, vec2(127.1, 311.7))) * 43758.5453);
  }
  
  vec2 hash2(vec2 p) {
    p = vec2(dot(p, vec2(127.1, 311.7)), dot(p, vec2(269.5, 183.3)));
    return fract(sin(p) * 43758.5453);
  }
  
  float fbm(vec2 p, int octaves) {
    float value = 0.0;
    float amplitude = 0.5;
    float frequency = 1.0;
    for(int i = 0; i < 6; i++) {
      if(i >= octaves) break;
      value += amplitude * snoise(p * frequency);
      amplitude *= 0.5;
      frequency *= 2.0;
    }
    return value;
  }
  
  float turbulence(vec2 p, int octaves) {
    float value = 0.0;
    float amplitude = 0.5;
    float frequency = 1.0;
    for(int i = 0; i < 6; i++) {
      if(i >= octaves) break;
      value += amplitude * abs(snoise(p * frequency));
      amplitude *= 0.5;
      frequency *= 2.0;
    }
    return value;
  }
  
  // Voronoi - returns (F1 distance, F2 distance, cell id)
  vec4 voronoi(vec2 p) {
    vec2 n = floor(p);
    vec2 f = fract(p);
    
    float md1 = 8.0;
    float md2 = 8.0;
    vec2 cellId = vec2(0.0);
    
    for(int j = -1; j <= 1; j++) {
      for(int i = -1; i <= 1; i++) {
        vec2 g = vec2(float(i), float(j));
        vec2 o = hash2(n + g);
        o = 0.5 + 0.4 * sin(6.2831 * o + 0.2);
        vec2 r = g + o - f;
        float d = dot(r, r);
        
        if(d < md1) {
          md2 = md1;
          md1 = d;
          cellId = n + g;
        } else if(d < md2) {
          md2 = d;
        }
      }
    }
    
    return vec4(sqrt(md1), sqrt(md2), cellId);
  }
  
  // Get crack edge with organic displacement
  float getCrackEdge(vec2 uv, float scale, float warpAmount) {
    // Warp coordinates for organic shapes
    vec2 warp = vec2(
      fbm(uv * 4.0, 4),
      fbm(uv * 4.0 + 100.0, 4)
    ) * warpAmount;
    
    vec2 p = uv * scale + warp;
    vec4 v = voronoi(p);
    
    // Edge = difference between F2 and F1
    float edge = v.y - v.x;
    
    // Add noise to edge for uneven crack width
    float edgeNoise = snoise(uv * scale * 5.0) * 0.015;
    edgeNoise += snoise(uv * scale * 15.0) * 0.008;
    
    return edge + edgeNoise;
  }
  
  // Stone surface texture
  float stoneTexture(vec2 p) {
    // Large bumps
    float large = turbulence(p * 4.0, 4) * 0.35;
    // Medium detail
    float med = snoise(p * 12.0) * 0.2;
    // Fine grain
    float fine = snoise(p * 30.0) * 0.1;
    float finer = snoise(p * 60.0) * 0.05;
    
    return large + med + fine + finer;
  }
  
  // Lava with flow and texture
  vec3 lavaColor(vec2 p, float time, float intensity) {
    // Slow flow
    vec2 flow1 = p + vec2(time * 0.012, time * 0.008);
    vec2 flow2 = p + vec2(-time * 0.01, time * 0.015);
    
    // Temperature variation
    float temp = intensity;
    temp += snoise(flow1 * 5.0) * 0.15;
    temp += snoise(flow2 * 3.0) * 0.1;
    temp += turbulence(flow1 * 2.0, 3) * 0.1;
    temp = clamp(temp, 0.0, 1.0);
    
    // Vibrant lava colors
    vec3 darkRed = vec3(0.18, 0.02, 0.0);
    vec3 red = vec3(0.55, 0.08, 0.0);
    vec3 orange = vec3(0.92, 0.32, 0.0);
    vec3 yellow = vec3(1.0, 0.6, 0.08);
    vec3 white = vec3(1.0, 0.88, 0.45);
    
    vec3 col = darkRed;
    col = mix(col, red, smoothstep(0.1, 0.3, temp));
    col = mix(col, orange, smoothstep(0.3, 0.55, temp));
    col = mix(col, yellow, smoothstep(0.55, 0.8, temp));
    col = mix(col, white, smoothstep(0.85, 1.0, temp) * 0.6);
    
    return col;
  }
  
  void main() {
    vec2 uv = vUv;
    vec2 aspect = vec2(uResolution.x / uResolution.y, 1.0);
    vec2 uvAspect = uv * aspect;
    vec2 mouseAspect = uMouse * aspect;
    
    // Mouse influence
    float dist = distance(uvAspect, mouseAspect);
    float mouseNear = smoothstep(0.35, 0.0, dist);
    float mouseWide = smoothstep(0.8, 0.0, dist);
    
    float openAmount = uMouseInfluence;
    
    // === CRACK SYSTEM ===
    // Primary cracks - large scale, few cracks
    float edge1 = getCrackEdge(uv, 2.2, 0.25);
    
    // Secondary cracks - medium
    float edge2 = getCrackEdge(uv + 50.0, 4.0, 0.2);
    
    // Fine cracks - small, only visible when open
    float edge3 = getCrackEdge(uv + 100.0, 7.0, 0.15);
    
    // Animated crack widths - NARROW base, wider when mouse is near
    float baseWidth1 = 0.012;  // Very thin when closed
    float maxWidth1 = 0.08;    // Wider when open
    float width1 = mix(baseWidth1, maxWidth1, openAmount * mouseWide);
    // Vary width along crack for organic look
    width1 *= 0.6 + snoise(uv * 6.0) * 0.6;
    
    float baseWidth2 = 0.008;
    float maxWidth2 = 0.05;
    float width2 = mix(baseWidth2, maxWidth2, openAmount * mouseWide * 0.8);
    width2 *= 0.5 + snoise(uv * 10.0 + 30.0) * 0.7;
    
    float baseWidth3 = 0.004;
    float maxWidth3 = 0.025;
    float width3 = mix(baseWidth3, maxWidth3, openAmount * mouseWide * 0.5);
    width3 *= 0.4 + snoise(uv * 14.0 + 60.0) * 0.8;
    
    // Crack visibility masks
    float crack1 = 1.0 - smoothstep(0.0, width1, edge1);
    float crack1Core = 1.0 - smoothstep(0.0, width1 * 0.4, edge1);
    float crack1Glow = 1.0 - smoothstep(0.0, width1 * 4.0, edge1);
    
    float crack2 = 1.0 - smoothstep(0.0, width2, edge2);
    float crack2Core = 1.0 - smoothstep(0.0, width2 * 0.4, edge2);
    float crack2Glow = 1.0 - smoothstep(0.0, width2 * 3.5, edge2);
    
    // Fine cracks fade in based on openAmount
    float fineVis = smoothstep(0.3, 0.7, openAmount * mouseWide);
    float crack3 = (1.0 - smoothstep(0.0, width3, edge3)) * fineVis;
    float crack3Core = (1.0 - smoothstep(0.0, width3 * 0.4, edge3)) * fineVis;
    float crack3Glow = (1.0 - smoothstep(0.0, width3 * 3.0, edge3)) * fineVis * 0.6;
    
    // Combine cracks
    float cracks = max(crack1, max(crack2 * 0.85, crack3 * 0.6));
    float crackCore = max(crack1Core, max(crack2Core * 0.8, crack3Core * 0.5));
    float crackGlow = max(crack1Glow, max(crack2Glow * 0.7, crack3Glow * 0.4));
    
    // === STONE PLATES ===
    vec4 v = voronoi(uv * 2.2 + vec2(fbm(uv * 4.0, 3) * 0.25));
    float cellDist = v.x;
    float plateId = hash(v.zw);
    
    // Stone texture
    float stoneTex = stoneTexture(uv);
    float plateHeight = plateId * 0.15;
    float totalHeight = stoneTex + plateHeight;
    
    // Darken near cracks (depth shadow)
    totalHeight -= crackGlow * 0.3;
    
    // Bevel at plate edges
    float bevel = smoothstep(0.0, 0.18, cellDist);
    totalHeight *= 0.8 + bevel * 0.2;
    
    // Stone colors - dark basalt
    vec3 stoneBlack = vec3(0.01, 0.01, 0.012);
    vec3 stoneDark = vec3(0.03, 0.028, 0.035);
    vec3 stoneMid = vec3(0.06, 0.055, 0.07);
    vec3 stoneLight = vec3(0.1, 0.095, 0.11);
    
    float h = totalHeight * 0.5 + 0.5;
    vec3 stoneColor = stoneBlack;
    stoneColor = mix(stoneColor, stoneDark, smoothstep(0.25, 0.4, h));
    stoneColor = mix(stoneColor, stoneMid, smoothstep(0.4, 0.55, h));
    stoneColor = mix(stoneColor, stoneLight, smoothstep(0.6, 0.8, h) * 0.4);
    
    // Micro detail
    float micro = snoise(uv * 50.0) * 0.06;
    stoneColor *= 1.0 + micro;
    
    // Subtle highlight on peaks
    float highlight = pow(max(h - 0.6, 0.0) * 2.5, 2.0) * 0.04;
    stoneColor += vec3(highlight);
    
    // Shadow in cracks
    stoneColor *= 1.0 - crackGlow * 0.5;
    
    // === LAVA ===
    float lavaIntensity = crackCore * 0.6 + cracks * 0.4;
    lavaIntensity = pow(lavaIntensity, 0.75);
    
    vec3 lava = lavaColor(uv, uTime, lavaIntensity);
    
    // Boost near mouse
    lava *= 1.0 + mouseNear * 0.5;
    
    // Pulse
    float pulse = sin(uTime * 0.6 + totalHeight * 3.0) * 0.06 + 0.97;
    lava *= pulse;
    
    // Hot core
    vec3 hotWhite = vec3(1.0, 0.85, 0.4);
    lava = mix(lava, hotWhite, crackCore * 0.35 * (0.6 + mouseNear * 0.6));
    
    // === FINAL COMPOSITE ===
    vec3 finalColor = stoneColor;
    
    // Subsurface glow (lava visible through stone near cracks)
    float subsurface = crackGlow * (0.25 + openAmount * 0.35);
    finalColor += vec3(0.1, 0.02, 0.0) * subsurface;
    
    // Lava in cracks
    float lavaVis = cracks * (0.65 + openAmount * 0.35);
    finalColor = mix(finalColor, lava, lavaVis);
    
    // Rim glow around cracks
    float rim = max(crackGlow - cracks * 0.8, 0.0) * (0.35 + openAmount * 0.5);
    finalColor += vec3(0.22, 0.045, 0.0) * rim;
    
    // Bloom near mouse
    float bloom = crackGlow * mouseNear * 0.4;
    finalColor += vec3(0.3, 0.08, 0.01) * bloom;
    
    // === POST ===
    // Vignette
    float vig = 1.0 - smoothstep(0.4, 1.3, length(uv - 0.5) * 1.1);
    finalColor *= vig * 0.2 + 0.8;
    
    // Contrast
    finalColor = pow(finalColor, vec3(0.94));
    
    gl_FragColor = vec4(finalColor, 1.0);
  }
`;

function init() {
  const canvas = document.getElementById('shader-canvas') as HTMLCanvasElement;
  if (!canvas) return;
  
  const renderer = new THREE.WebGLRenderer({ 
    canvas, 
    antialias: true,
    powerPreference: 'high-performance'
  });
  renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
  renderer.setSize(window.innerWidth, window.innerHeight);
  
  const scene = new THREE.Scene();
  const camera = new THREE.OrthographicCamera(-1, 1, 1, -1, 0.1, 10);
  camera.position.z = 1;
  
  const uniforms = {
    uTime: { value: 0 },
    uMouse: { value: new THREE.Vector2(0.5, 0.5) },
    uResolution: { value: new THREE.Vector2(window.innerWidth, window.innerHeight) },
    uMouseInfluence: { value: 0.3 }  // Start more closed
  };
  
  const material = new THREE.ShaderMaterial({
    vertexShader,
    fragmentShader,
    uniforms
  });
  
  const mesh = new THREE.Mesh(new THREE.PlaneGeometry(2, 2), material);
  scene.add(mesh);
  
  const targetMouse = new THREE.Vector2(0.5, 0.5);
  const currentMouse = new THREE.Vector2(0.5, 0.5);
  let targetInfluence = 0.3;
  let currentInfluence = 0.3;
  let lastMouseMove = Date.now();
  
  document.addEventListener('mousemove', (e) => {
    targetMouse.x = e.clientX / window.innerWidth;
    targetMouse.y = 1.0 - (e.clientY / window.innerHeight);
    lastMouseMove = Date.now();
    
    const centerDist = Math.sqrt(
      Math.pow(targetMouse.x - 0.5, 2) + 
      Math.pow(targetMouse.y - 0.5, 2)
    );
    targetInfluence = Math.min(1.0, 0.5 + (1.0 - centerDist) * 0.7);
  });
  
  document.addEventListener('mouseleave', () => {
    targetInfluence = 0.2;
  });
  
  document.addEventListener('touchmove', (e) => {
    if (e.touches.length > 0) {
      targetMouse.x = e.touches[0].clientX / window.innerWidth;
      targetMouse.y = 1.0 - (e.touches[0].clientY / window.innerHeight);
      lastMouseMove = Date.now();
      targetInfluence = 1.0;
    }
  });
  
  document.addEventListener('touchend', () => {
    targetInfluence = 0.3;
  });
  
  window.addEventListener('resize', () => {
    renderer.setSize(window.innerWidth, window.innerHeight);
    uniforms.uResolution.value.set(window.innerWidth, window.innerHeight);
  });
  
  function animate() {
    requestAnimationFrame(animate);
    
    uniforms.uTime.value += 0.016;
    
    currentMouse.x += (targetMouse.x - currentMouse.x) * 0.04;
    currentMouse.y += (targetMouse.y - currentMouse.y) * 0.04;
    uniforms.uMouse.value.copy(currentMouse);
    
    // Slowly close cracks if mouse inactive
    if (Date.now() - lastMouseMove > 2500) {
      targetInfluence = Math.max(0.2, targetInfluence - 0.003);
    }
    
    // Smooth open/close animation
    const speed = currentInfluence < targetInfluence ? 0.02 : 0.008;
    currentInfluence += (targetInfluence - currentInfluence) * speed;
    uniforms.uMouseInfluence.value = currentInfluence;
    
    renderer.render(scene, camera);
  }
  
  animate();
}

if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', init);
} else {
  init();
}
</script>
