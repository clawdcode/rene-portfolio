---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Shader Prototype | René Portfolio">
  <main class="shader-page">
    <canvas id="shader-canvas"></canvas>
    <div class="overlay">
      <h1>Shader Prototype V7</h1>
      <p>Move your mouse to reveal the glowing lava beneath — now with depth!</p>
      <a href="/" class="back-link">← Back to Portfolio</a>
    </div>
  </main>
</Layout>

<style>
  .shader-page {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background: #000;
  }
  
  #shader-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .overlay {
    position: absolute;
    bottom: 40px;
    left: 40px;
    z-index: 10;
    pointer-events: none;
  }
  
  .overlay h1 {
    font-size: 1.5rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.8);
  }
  
  .overlay p {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
  }
  
  .overlay .back-link {
    pointer-events: auto;
    font-size: 0.875rem;
    color: rgba(255, 150, 100, 0.8);
    transition: color 0.2s ease;
  }
  
  .overlay .back-link:hover {
    color: rgba(255, 180, 120, 1);
  }
</style>

<script>
import * as THREE from 'three';

const vertexShader = `
  varying vec2 vUv;
  varying vec3 vViewDir;
  varying vec3 vTangentViewDir;
  
  void main() {
    vUv = uv;
    
    // Calculate view direction in object space
    vec4 worldPos = modelMatrix * vec4(position, 1.0);
    vViewDir = normalize(cameraPosition - worldPos.xyz);
    
    // For a flat plane, tangent space is simple:
    // tangent = X axis, bitangent = Y axis, normal = Z axis
    vec3 T = vec3(1.0, 0.0, 0.0);
    vec3 B = vec3(0.0, 1.0, 0.0);
    vec3 N = vec3(0.0, 0.0, 1.0);
    
    // Transform view direction to tangent space
    mat3 TBN = mat3(T, B, N);
    vTangentViewDir = normalize(TBN * vViewDir);
    
    gl_Position = projectionMatrix * modelViewMatrix * vec4(position, 1.0);
  }
`;

const fragmentShader = `
  precision highp float;
  
  uniform float uTime;
  uniform vec2 uMouse;
  uniform vec2 uResolution;
  uniform float uMouseInfluence;
  uniform sampler2D uStoneTexture;
  uniform sampler2D uLavaTexture;
  uniform float uParallaxDepth;
  
  varying vec2 vUv;
  varying vec3 vViewDir;
  varying vec3 vTangentViewDir;
  
  // ========== NOISE ==========
  vec3 mod289(vec3 x) { return x - floor(x * (1.0 / 289.0)) * 289.0; }
  vec4 mod289(vec4 x) { return x - floor(x * (1.0 / 289.0)) * 289.0; }
  vec4 permute(vec4 x) { return mod289(((x*34.0)+1.0)*x); }
  vec4 taylorInvSqrt(vec4 r) { return 1.79284291400159 - 0.85373472095314 * r; }
  
  float snoise3(vec3 v) {
    const vec2 C = vec2(1.0/6.0, 1.0/3.0);
    const vec4 D = vec4(0.0, 0.5, 1.0, 2.0);
    vec3 i = floor(v + dot(v, C.yyy));
    vec3 x0 = v - i + dot(i, C.xxx);
    vec3 g = step(x0.yzx, x0.xyz);
    vec3 l = 1.0 - g;
    vec3 i1 = min(g.xyz, l.zxy);
    vec3 i2 = max(g.xyz, l.zxy);
    vec3 x1 = x0 - i1 + C.xxx;
    vec3 x2 = x0 - i2 + C.yyy;
    vec3 x3 = x0 - D.yyy;
    i = mod289(i);
    vec4 p = permute(permute(permute(i.z + vec4(0.0, i1.z, i2.z, 1.0)) + i.y + vec4(0.0, i1.y, i2.y, 1.0)) + i.x + vec4(0.0, i1.x, i2.x, 1.0));
    float n_ = 0.142857142857;
    vec3 ns = n_ * D.wyz - D.xzx;
    vec4 j = p - 49.0 * floor(p * ns.z * ns.z);
    vec4 x_ = floor(j * ns.z);
    vec4 y_ = floor(j - 7.0 * x_);
    vec4 x = x_ * ns.x + ns.yyyy;
    vec4 y = y_ * ns.x + ns.yyyy;
    vec4 h = 1.0 - abs(x) - abs(y);
    vec4 b0 = vec4(x.xy, y.xy);
    vec4 b1 = vec4(x.zw, y.zw);
    vec4 s0 = floor(b0)*2.0 + 1.0;
    vec4 s1 = floor(b1)*2.0 + 1.0;
    vec4 sh = -step(h, vec4(0.0));
    vec4 a0 = b0.xzyw + s0.xzyw*sh.xxyy;
    vec4 a1 = b1.xzyw + s1.xzyw*sh.zzww;
    vec3 p0 = vec3(a0.xy, h.x);
    vec3 p1 = vec3(a0.zw, h.y);
    vec3 p2 = vec3(a1.xy, h.z);
    vec3 p3 = vec3(a1.zw, h.w);
    vec4 norm = taylorInvSqrt(vec4(dot(p0,p0), dot(p1,p1), dot(p2,p2), dot(p3,p3)));
    p0 *= norm.x; p1 *= norm.y; p2 *= norm.z; p3 *= norm.w;
    vec4 m = max(0.6 - vec4(dot(x0,x0), dot(x1,x1), dot(x2,x2), dot(x3,x3)), 0.0);
    m = m * m;
    return 42.0 * dot(m*m, vec4(dot(p0,x0), dot(p1,x1), dot(p2,x2), dot(p3,x3)));
  }
  
  float snoise(vec2 v) { return snoise3(vec3(v, 0.0)); }
  
  float hash(vec2 p) { return fract(sin(dot(p, vec2(127.1, 311.7))) * 43758.5453); }
  vec2 hash2(vec2 p) {
    p = vec2(dot(p, vec2(127.1, 311.7)), dot(p, vec2(269.5, 183.3)));
    return fract(sin(p) * 43758.5453);
  }
  
  float fbm(vec2 p, int octaves) {
    float value = 0.0, amplitude = 0.5, frequency = 1.0;
    for(int i = 0; i < 8; i++) {
      if(i >= octaves) break;
      value += amplitude * snoise(p * frequency);
      amplitude *= 0.5; frequency *= 2.0;
    }
    return value;
  }
  
  // ========== VORONOI CRACKS ==========
  float voronoiEdge(vec2 p) {
    vec2 n = floor(p), f = fract(p);
    vec2 mg, mr;
    float md = 8.0;
    for(int j = -1; j <= 1; j++) {
      for(int i = -1; i <= 1; i++) {
        vec2 g = vec2(float(i), float(j));
        vec2 o = hash2(n + g);
        o = 0.5 + 0.45 * sin(6.2831 * o);
        vec2 r = g + o - f;
        float d = dot(r, r);
        if(d < md) { md = d; mr = r; mg = g; }
      }
    }
    md = 8.0;
    for(int j = -2; j <= 2; j++) {
      for(int i = -2; i <= 2; i++) {
        vec2 g = mg + vec2(float(i), float(j));
        vec2 o = hash2(n + g);
        o = 0.5 + 0.45 * sin(6.2831 * o);
        vec2 r = g + o - f;
        if(dot(mr - r, mr - r) > 0.00001)
          md = min(md, dot(0.5 * (mr + r), normalize(r - mr)));
      }
    }
    return md;
  }
  
  // ========== HEIGHT MAP GENERATION ==========
  // Generate height from crack pattern (1.0 = stone surface, 0.0 = deep crack)
  float getHeight(vec2 uv, float mouseInf) {
    vec2 warp = vec2(fbm(uv * 1.8 + 10.0, 4), fbm(uv * 1.8 + 20.0, 4)) * 0.2;
    
    // Multi-scale cracks
    vec2 p1 = uv * 2.2 + warp;
    vec2 p2 = uv * 4.0 + warp + 50.0;
    vec2 p3 = uv * 6.5 + warp + 100.0;
    
    float edge1 = voronoiEdge(p1);
    float edge2 = voronoiEdge(p2);
    float edge3 = voronoiEdge(p3);
    
    // Add noise for roughness
    edge1 += snoise(uv * 11.0) * 0.015;
    edge2 += snoise(uv * 22.0) * 0.01;
    edge3 += snoise(uv * 33.0) * 0.008;
    
    // Variable expansion based on noise
    float exp1 = snoise(uv * 2.0) * 0.5 + 0.5;
    float exp2 = snoise(uv * 4.0 + 30.0) * 0.5 + 0.5;
    
    // Crack widths - wider with mouse proximity
    float w1 = 0.03 + mouseInf * 0.28 * exp1;
    float w2 = 0.022 + mouseInf * 0.18 * exp2;
    float w3 = 0.015 + mouseInf * 0.10 * exp1;
    
    // Height profile: smooth transition from surface to crack depth
    // Using smoothstep for nice rounded edges
    float h1 = smoothstep(0.0, w1 * 1.5, edge1);
    float h2 = smoothstep(0.0, w2 * 1.5, edge2);
    float h3 = smoothstep(0.0, w3 * 1.5, edge3);
    
    // Combine heights - major cracks go deeper
    float height = min(h1, min(h2 * 0.7 + 0.3, h3 * 0.5 + 0.5));
    
    // Add stone surface detail (micro bumps)
    float stoneBump = snoise(uv * 40.0) * 0.03 + snoise(uv * 80.0) * 0.015;
    height += stoneBump * height; // Only on stone surface, not in cracks
    
    return height;
  }
  
  // ========== PARALLAX OCCLUSION MAPPING ==========
  vec2 parallaxMapping(vec2 uv, vec3 viewDir, float mouseInf) {
    // Dynamic depth based on mouse influence
    float depth = uParallaxDepth * (0.8 + mouseInf * 0.6);
    
    // Number of layers for ray marching
    const float minLayers = 16.0;
    const float maxLayers = 48.0;
    float numLayers = mix(maxLayers, minLayers, abs(viewDir.z));
    
    float layerDepth = 1.0 / numLayers;
    float currentLayerDepth = 0.0;
    
    // Direction to shift UVs per layer
    vec2 P = viewDir.xy / viewDir.z * depth;
    vec2 deltaUV = P / numLayers;
    
    vec2 currentUV = uv;
    float currentHeight = getHeight(currentUV, mouseInf);
    
    // Ray march through layers
    for(int i = 0; i < 48; i++) {
      if(currentLayerDepth >= currentHeight) break;
      
      currentUV -= deltaUV;
      currentHeight = getHeight(currentUV, mouseInf);
      currentLayerDepth += layerDepth;
    }
    
    // Interpolation for smoother result
    vec2 prevUV = currentUV + deltaUV;
    float afterDepth = currentHeight - currentLayerDepth;
    float beforeDepth = getHeight(prevUV, mouseInf) - currentLayerDepth + layerDepth;
    float weight = afterDepth / (afterDepth - beforeDepth);
    
    return mix(currentUV, prevUV, weight);
  }
  
  // ========== NORMAL FROM HEIGHT ==========
  vec3 getNormalFromHeight(vec2 uv, float mouseInf) {
    float eps = 0.002;
    float h = getHeight(uv, mouseInf);
    float hx = getHeight(uv + vec2(eps, 0.0), mouseInf);
    float hy = getHeight(uv + vec2(0.0, eps), mouseInf);
    
    // Stronger normal effect for better definition
    float strength = 2.5;
    vec3 normal = normalize(vec3(
      (h - hx) * strength,
      (h - hy) * strength,
      1.0
    ));
    
    return normal;
  }
  
  // ========== MOUSE INFLUENCE ==========
  float getMouseInfluence(vec2 uv, vec2 mouse, float baseInfluence) {
    vec2 aspect = vec2(uResolution.x / uResolution.y, 1.0);
    vec2 uvA = uv * aspect, mouseA = mouse * aspect;
    float dist = distance(uvA, mouseA);
    
    float inf = smoothstep(0.6, 0.0, dist);
    inf = pow(inf, 1.6);
    
    return inf * baseInfluence;
  }
  
  // ========== AMBIENT OCCLUSION ==========
  float getAO(vec2 uv, float height, float mouseInf) {
    float ao = 1.0;
    
    // Sample surrounding heights
    float samples = 0.0;
    float totalOcc = 0.0;
    
    for(float angle = 0.0; angle < 6.28; angle += 0.785) {
      for(float r = 0.01; r < 0.04; r += 0.01) {
        vec2 offset = vec2(cos(angle), sin(angle)) * r;
        float neighborHeight = getHeight(uv + offset, mouseInf);
        
        // If neighbor is higher, it occludes
        float occ = max(0.0, neighborHeight - height);
        totalOcc += occ;
        samples += 1.0;
      }
    }
    
    ao = 1.0 - (totalOcc / samples) * 4.0;
    return clamp(ao, 0.3, 1.0);
  }
  
  // ========== SELF-SHADOWING ==========
  float getShadow(vec2 uv, float height, vec3 lightDir, float mouseInf) {
    float shadow = 1.0;
    
    // Light direction in UV space
    vec2 lightUV = lightDir.xy * 0.05;
    
    // Ray march towards light
    for(float t = 0.1; t < 1.0; t += 0.15) {
      vec2 sampleUV = uv + lightUV * t;
      float sampleHeight = getHeight(sampleUV, mouseInf);
      
      // If sample is higher than our projected height, we're in shadow
      float projectedHeight = height + lightDir.z * t * 0.3;
      if(sampleHeight > projectedHeight + 0.02) {
        shadow *= 0.7;
      }
    }
    
    return clamp(shadow, 0.4, 1.0);
  }
  
  // ========== MAIN ==========
  void main() {
    vec2 uv = vUv;
    float time = uTime;
    float mouseInf = getMouseInfluence(uv, uMouse, uMouseInfluence);
    
    // View direction for parallax (simplified for ortho camera)
    vec3 viewDir = normalize(vTangentViewDir);
    // Add subtle view angle variation based on UV position for more depth perception
    viewDir.xy += (uv - 0.5) * 0.3;
    viewDir = normalize(viewDir);
    
    // Apply parallax mapping
    vec2 parallaxUV = parallaxMapping(uv, viewDir, mouseInf);
    
    // Get height at final UV
    float height = getHeight(parallaxUV, mouseInf);
    
    // Get normal for lighting
    vec3 normal = getNormalFromHeight(parallaxUV, mouseInf);
    
    // Calculate AO and shadows
    float ao = getAO(parallaxUV, height, mouseInf);
    
    // Light from upper-left
    vec3 lightDir = normalize(vec3(0.5, 0.5, 0.8));
    float shadow = getShadow(parallaxUV, height, lightDir, mouseInf);
    
    // === SAMPLE TEXTURES ===
    vec2 stoneUV = parallaxUV * 3.0;
    vec2 lavaUV = parallaxUV * 2.0;
    
    // Add flowing motion to lava
    lavaUV.x += time * 0.02;
    lavaUV.y += sin(parallaxUV.x * 5.0 + time * 0.3) * 0.02;
    
    vec3 stoneColor = texture2D(uStoneTexture, stoneUV).rgb;
    vec3 lavaTexColor = texture2D(uLavaTexture, lavaUV).rgb;
    
    // === STONE: Dark basalt look with lighting ===
    stoneColor = pow(stoneColor, vec3(1.6)) * 0.4;
    
    // Apply lighting to stone
    float diffuse = max(dot(normal, lightDir), 0.0);
    float ambient = 0.3;
    float lighting = ambient + diffuse * 0.7;
    lighting *= ao * shadow;
    
    stoneColor *= lighting;
    
    // Rim lighting on edges
    float rim = 1.0 - max(dot(normal, vec3(0.0, 0.0, 1.0)), 0.0);
    rim = pow(rim, 3.0);
    stoneColor += vec3(0.05, 0.03, 0.02) * rim;
    
    // === LAVA: Convert texture to proper orange/yellow lava colors ===
    float lavaLum = dot(lavaTexColor, vec3(0.299, 0.587, 0.114));
    
    vec3 lavaColor;
    if (lavaLum < 0.3) {
      lavaColor = mix(vec3(0.15, 0.02, 0.0), vec3(0.6, 0.1, 0.0), lavaLum / 0.3);
    } else if (lavaLum < 0.6) {
      float t = (lavaLum - 0.3) / 0.3;
      lavaColor = mix(vec3(0.6, 0.1, 0.0), vec3(1.0, 0.4, 0.0), t);
    } else if (lavaLum < 0.85) {
      float t = (lavaLum - 0.6) / 0.25;
      lavaColor = mix(vec3(1.0, 0.4, 0.0), vec3(1.0, 0.8, 0.2), t);
    } else {
      float t = (lavaLum - 0.85) / 0.15;
      lavaColor = mix(vec3(1.0, 0.8, 0.2), vec3(1.0, 1.0, 0.8), t);
    }
    
    float emissive = 1.8 + lavaLum * 1.2;
    lavaColor *= emissive;
    
    // === CRACK MASKING (using height) ===
    // Lower height = deeper crack = more lava visible
    float crackMask = 1.0 - smoothstep(0.1, 0.5, height);
    float coreMask = 1.0 - smoothstep(0.0, 0.2, height);
    float glowMask = 1.0 - smoothstep(0.2, 0.7, height);
    
    // === DEPTH-BASED LAVA INTENSITY ===
    // Deeper in the crack = brighter lava
    float depthIntensity = 1.0 + (1.0 - height) * 0.5;
    
    // Pulsing animation
    float pulse = sin(time * 0.5 + snoise(parallaxUV * 2.5) * 4.0) * 0.1 + 1.0;
    
    // Final lava with pulse, depth, and mouse boost
    vec3 finalLava = lavaColor * pulse * depthIntensity;
    finalLava *= 1.0 + mouseInf * 0.5;
    
    // === COMPOSITE ===
    vec3 stone = stoneColor;
    
    // Orange glow on stone near cracks (subsurface scattering)
    float ssGlow = glowMask * (0.5 + mouseInf * 0.7);
    stone += vec3(0.12, 0.03, 0.0) * ssGlow * ao;
    
    // Mix stone and lava based on crack depth
    float lavaMix = smoothstep(0.05, 0.35, crackMask);
    vec3 final = mix(stone, finalLava, lavaMix);
    
    // Add rim glow at crack edges (where height transitions)
    float edgeGlow = max(glowMask - crackMask * 0.5, 0.0);
    final += vec3(0.3, 0.08, 0.0) * edgeGlow * (0.6 + mouseInf * 0.5) * shadow;
    
    // Add extra brightness to deepest parts
    final += vec3(0.4, 0.25, 0.05) * coreMask * (0.4 + mouseInf * 0.4);
    
    // === DEPTH FOG IN CRACKS ===
    // Slight haze in deep cracks for atmosphere
    float depthFog = (1.0 - height) * 0.08;
    final = mix(final, final * vec3(1.1, 0.9, 0.8), depthFog * crackMask);
    
    // === POST PROCESSING ===
    // Vignette
    float vig = 1.0 - smoothstep(0.4, 1.4, length(uv - 0.5) * 1.1);
    final *= 0.85 + vig * 0.15;
    
    // Minimal film grain
    final += hash(uv * 1000.0 + time) * 0.012 - 0.006;
    
    gl_FragColor = vec4(final, 1.0);
  }
`;

function init() {
  const canvas = document.getElementById('shader-canvas') as HTMLCanvasElement;
  if (!canvas) return;
  
  const renderer = new THREE.WebGLRenderer({ canvas, antialias: true, powerPreference: 'high-performance' });
  renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
  renderer.setSize(window.innerWidth, window.innerHeight);
  
  const scene = new THREE.Scene();
  const camera = new THREE.OrthographicCamera(-1, 1, 1, -1, 0.1, 10);
  camera.position.z = 1;
  
  // Load textures
  const textureLoader = new THREE.TextureLoader();
  const basePath = '/rene-portfolio';
  
  const stoneTexture = textureLoader.load(
    `${basePath}/textures/stone.jpg`,
    (tex) => {
      tex.wrapS = tex.wrapT = THREE.RepeatWrapping;
      tex.minFilter = THREE.LinearMipmapLinearFilter;
      tex.magFilter = THREE.LinearFilter;
      console.log('Stone texture loaded');
    }
  );
  
  const lavaTexture = textureLoader.load(
    `${basePath}/textures/lava.png`,
    (tex) => {
      tex.wrapS = tex.wrapT = THREE.RepeatWrapping;
      tex.minFilter = THREE.LinearMipmapLinearFilter;
      tex.magFilter = THREE.LinearFilter;
      console.log('Lava texture loaded');
    }
  );
  
  const uniforms = {
    uTime: { value: 0 },
    uMouse: { value: new THREE.Vector2(0.5, 0.5) },
    uResolution: { value: new THREE.Vector2(window.innerWidth, window.innerHeight) },
    uMouseInfluence: { value: 0.45 },
    uStoneTexture: { value: stoneTexture },
    uLavaTexture: { value: lavaTexture },
    uParallaxDepth: { value: 0.08 }  // Adjustable depth
  };
  
  const material = new THREE.ShaderMaterial({ vertexShader, fragmentShader, uniforms });
  const mesh = new THREE.Mesh(new THREE.PlaneGeometry(2, 2), material);
  scene.add(mesh);
  
  const targetMouse = new THREE.Vector2(0.5, 0.5);
  const currentMouse = new THREE.Vector2(0.5, 0.5);
  let targetInfluence = 0.45, currentInfluence = 0.45, lastMouseMove = Date.now();
  
  document.addEventListener('mousemove', (e) => {
    targetMouse.x = e.clientX / window.innerWidth;
    targetMouse.y = 1.0 - (e.clientY / window.innerHeight);
    lastMouseMove = Date.now();
    targetInfluence = Math.min(1.1, targetInfluence + 0.08);
  });
  
  document.addEventListener('mouseleave', () => { targetInfluence = 0.35; });
  
  document.addEventListener('touchmove', (e) => {
    if (e.touches.length > 0) {
      targetMouse.x = e.touches[0].clientX / window.innerWidth;
      targetMouse.y = 1.0 - (e.touches[0].clientY / window.innerHeight);
      lastMouseMove = Date.now();
      targetInfluence = 1.2;
    }
  });
  
  document.addEventListener('touchend', () => { targetInfluence = 0.45; });
  
  window.addEventListener('resize', () => {
    renderer.setSize(window.innerWidth, window.innerHeight);
    uniforms.uResolution.value.set(window.innerWidth, window.innerHeight);
  });
  
  // Keyboard controls for depth adjustment
  document.addEventListener('keydown', (e) => {
    if (e.key === '+' || e.key === '=') {
      uniforms.uParallaxDepth.value = Math.min(0.2, uniforms.uParallaxDepth.value + 0.01);
      console.log('Parallax depth:', uniforms.uParallaxDepth.value);
    }
    if (e.key === '-') {
      uniforms.uParallaxDepth.value = Math.max(0.02, uniforms.uParallaxDepth.value - 0.01);
      console.log('Parallax depth:', uniforms.uParallaxDepth.value);
    }
  });
  
  function animate() {
    requestAnimationFrame(animate);
    uniforms.uTime.value += 0.016;
    
    currentMouse.x += (targetMouse.x - currentMouse.x) * 0.05;
    currentMouse.y += (targetMouse.y - currentMouse.y) * 0.05;
    uniforms.uMouse.value.copy(currentMouse);
    
    if (Date.now() - lastMouseMove > 1000) {
      targetInfluence = Math.max(0.35, targetInfluence - 0.003);
    }
    
    const speed = currentInfluence < targetInfluence ? 0.035 : 0.012;
    currentInfluence += (targetInfluence - currentInfluence) * speed;
    uniforms.uMouseInfluence.value = currentInfluence;
    
    renderer.render(scene, camera);
  }
  
  animate();
}

if (document.readyState === 'loading') document.addEventListener('DOMContentLoaded', init);
else init();
</script>
