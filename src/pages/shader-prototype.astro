---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Shader Prototype | René Portfolio">
  <main class="shader-page">
    <canvas id="shader-canvas"></canvas>
    <div class="overlay">
      <h1>Shader Prototype V3</h1>
      <p>Move your mouse to see the cracks open</p>
      <a href="/" class="back-link">← Back to Portfolio</a>
    </div>
  </main>
</Layout>

<style>
  .shader-page {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background: #000;
  }
  
  #shader-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .overlay {
    position: absolute;
    bottom: 40px;
    left: 40px;
    z-index: 10;
    pointer-events: none;
  }
  
  .overlay h1 {
    font-size: 1.5rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.8);
  }
  
  .overlay p {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
  }
  
  .overlay .back-link {
    pointer-events: auto;
    font-size: 0.875rem;
    color: rgba(255, 150, 100, 0.8);
    transition: color 0.2s ease;
  }
  
  .overlay .back-link:hover {
    color: rgba(255, 180, 120, 1);
  }
</style>

<script>
import * as THREE from 'three';

const vertexShader = `
  varying vec2 vUv;
  
  void main() {
    vUv = uv;
    gl_Position = projectionMatrix * modelViewMatrix * vec4(position, 1.0);
  }
`;

const fragmentShader = `
  precision highp float;
  
  uniform float uTime;
  uniform vec2 uMouse;
  uniform vec2 uResolution;
  uniform float uMouseInfluence;
  varying vec2 vUv;
  
  //=== SIMPLEX NOISE ===
  vec3 mod289(vec3 x) { return x - floor(x * (1.0 / 289.0)) * 289.0; }
  vec2 mod289(vec2 x) { return x - floor(x * (1.0 / 289.0)) * 289.0; }
  vec3 permute(vec3 x) { return mod289(((x*34.0)+1.0)*x); }
  
  float snoise(vec2 v) {
    const vec4 C = vec4(0.211324865405187, 0.366025403784439, -0.577350269189626, 0.024390243902439);
    vec2 i  = floor(v + dot(v, C.yy));
    vec2 x0 = v - i + dot(i, C.xx);
    vec2 i1 = (x0.x > x0.y) ? vec2(1.0, 0.0) : vec2(0.0, 1.0);
    vec4 x12 = x0.xyxy + C.xxzz;
    x12.xy -= i1;
    i = mod289(i);
    vec3 p = permute(permute(i.y + vec3(0.0, i1.y, 1.0)) + i.x + vec3(0.0, i1.x, 1.0));
    vec3 m = max(0.5 - vec3(dot(x0,x0), dot(x12.xy,x12.xy), dot(x12.zw,x12.zw)), 0.0);
    m = m*m; m = m*m;
    vec3 x = 2.0 * fract(p * C.www) - 1.0;
    vec3 h = abs(x) - 0.5;
    vec3 ox = floor(x + 0.5);
    vec3 a0 = x - ox;
    m *= 1.79284291400159 - 0.85373472095314 * (a0*a0 + h*h);
    vec3 g;
    g.x = a0.x * x0.x + h.x * x0.y;
    g.yz = a0.yz * x12.xz + h.yz * x12.yw;
    return 130.0 * dot(m, g);
  }
  
  float hash(vec2 p) {
    return fract(sin(dot(p, vec2(127.1, 311.7))) * 43758.5453);
  }
  
  vec2 hash2(vec2 p) {
    p = vec2(dot(p, vec2(127.1, 311.7)), dot(p, vec2(269.5, 183.3)));
    return fract(sin(p) * 43758.5453);
  }
  
  float fbm(vec2 p, int octaves) {
    float value = 0.0;
    float amplitude = 0.5;
    float frequency = 1.0;
    for(int i = 0; i < 6; i++) {
      if(i >= octaves) break;
      value += amplitude * snoise(p * frequency);
      amplitude *= 0.5;
      frequency *= 2.0;
    }
    return value;
  }
  
  float turbulence(vec2 p, int octaves) {
    float value = 0.0;
    float amplitude = 0.5;
    float frequency = 1.0;
    for(int i = 0; i < 6; i++) {
      if(i >= octaves) break;
      value += amplitude * abs(snoise(p * frequency));
      amplitude *= 0.5;
      frequency *= 2.0;
    }
    return value;
  }
  
  // Voronoi - returns (F1 distance, F2 distance, cell id x, cell id y)
  vec4 voronoi(vec2 p) {
    vec2 n = floor(p);
    vec2 f = fract(p);
    
    float md1 = 8.0;
    float md2 = 8.0;
    vec2 cellId = vec2(0.0);
    
    for(int j = -1; j <= 1; j++) {
      for(int i = -1; i <= 1; i++) {
        vec2 g = vec2(float(i), float(j));
        vec2 o = hash2(n + g);
        o = 0.5 + 0.4 * sin(6.2831 * o + 0.2);
        vec2 r = g + o - f;
        float d = dot(r, r);
        
        if(d < md1) {
          md2 = md1;
          md1 = d;
          cellId = n + g;
        } else if(d < md2) {
          md2 = d;
        }
      }
    }
    
    return vec4(sqrt(md1), sqrt(md2), cellId);
  }
  
  // Get crack edge distance with organic displacement
  float getCrackEdge(vec2 uv, float scale, float warpAmount) {
    vec2 warp = vec2(
      fbm(uv * 4.0, 4),
      fbm(uv * 4.0 + 100.0, 4)
    ) * warpAmount;
    
    vec2 p = uv * scale + warp;
    vec4 v = voronoi(p);
    
    float edge = v.y - v.x;
    
    // Add noise for uneven crack edges
    float edgeNoise = snoise(uv * scale * 5.0) * 0.012;
    edgeNoise += snoise(uv * scale * 12.0) * 0.006;
    
    return edge + edgeNoise;
  }
  
  // Stone surface texture
  float stoneTexture(vec2 p) {
    float large = turbulence(p * 4.0, 4) * 0.35;
    float med = snoise(p * 12.0) * 0.2;
    float fine = snoise(p * 30.0) * 0.1;
    float finer = snoise(p * 60.0) * 0.05;
    return large + med + fine + finer;
  }
  
  // Lava color based on temperature (only used INSIDE cracks)
  vec3 lavaGradient(float temp, vec2 uv, float time) {
    // Add flow-based variation to temperature
    vec2 flow = uv + vec2(time * 0.01, time * 0.007);
    float variation = snoise(flow * 6.0) * 0.12;
    variation += snoise(flow * 12.0) * 0.08;
    
    float t = clamp(temp + variation, 0.0, 1.0);
    
    // Lava color gradient
    vec3 darkRed = vec3(0.2, 0.03, 0.0);
    vec3 red = vec3(0.5, 0.1, 0.0);
    vec3 orange = vec3(0.9, 0.35, 0.0);
    vec3 yellow = vec3(1.0, 0.6, 0.1);
    vec3 white = vec3(1.0, 0.85, 0.4);
    
    vec3 col = darkRed;
    col = mix(col, red, smoothstep(0.0, 0.25, t));
    col = mix(col, orange, smoothstep(0.25, 0.5, t));
    col = mix(col, yellow, smoothstep(0.5, 0.75, t));
    col = mix(col, white, smoothstep(0.8, 1.0, t) * 0.5);
    
    return col;
  }
  
  void main() {
    vec2 uv = vUv;
    vec2 aspect = vec2(uResolution.x / uResolution.y, 1.0);
    vec2 uvAspect = uv * aspect;
    vec2 mouseAspect = uMouse * aspect;
    
    // Mouse influence
    float dist = distance(uvAspect, mouseAspect);
    float mouseNear = smoothstep(0.35, 0.0, dist);
    float mouseWide = smoothstep(0.7, 0.0, dist);
    
    float openAmount = uMouseInfluence;
    
    // === CRACK NETWORK ===
    // Primary cracks
    float edge1 = getCrackEdge(uv, 2.5, 0.22);
    // Secondary cracks  
    float edge2 = getCrackEdge(uv + 50.0, 4.5, 0.18);
    // Fine cracks
    float edge3 = getCrackEdge(uv + 100.0, 8.0, 0.12);
    
    // Animated crack widths
    float baseWidth1 = 0.015;
    float maxWidth1 = 0.09;
    float width1 = mix(baseWidth1, maxWidth1, openAmount * mouseWide);
    width1 *= 0.65 + snoise(uv * 5.0) * 0.5;
    
    float baseWidth2 = 0.01;
    float maxWidth2 = 0.055;
    float width2 = mix(baseWidth2, maxWidth2, openAmount * mouseWide * 0.85);
    width2 *= 0.55 + snoise(uv * 8.0 + 30.0) * 0.6;
    
    float baseWidth3 = 0.006;
    float maxWidth3 = 0.03;
    float width3 = mix(baseWidth3, maxWidth3, openAmount * mouseWide * 0.6);
    width3 *= 0.45 + snoise(uv * 12.0 + 60.0) * 0.7;
    
    // Crack masks
    float crack1 = 1.0 - smoothstep(0.0, width1, edge1);
    float crack1Core = 1.0 - smoothstep(0.0, width1 * 0.35, edge1);
    float crack1Glow = 1.0 - smoothstep(0.0, width1 * 2.5, edge1);
    
    float crack2 = 1.0 - smoothstep(0.0, width2, edge2);
    float crack2Core = 1.0 - smoothstep(0.0, width2 * 0.35, edge2);
    float crack2Glow = 1.0 - smoothstep(0.0, width2 * 2.2, edge2);
    
    float fineVis = smoothstep(0.35, 0.75, openAmount * mouseWide);
    float crack3 = (1.0 - smoothstep(0.0, width3, edge3)) * fineVis;
    float crack3Core = (1.0 - smoothstep(0.0, width3 * 0.35, edge3)) * fineVis;
    float crack3Glow = (1.0 - smoothstep(0.0, width3 * 2.0, edge3)) * fineVis * 0.5;
    
    // Combined cracks
    float cracks = max(crack1, max(crack2 * 0.9, crack3 * 0.65));
    float crackCore = max(crack1Core, max(crack2Core * 0.85, crack3Core * 0.55));
    float crackGlow = max(crack1Glow, max(crack2Glow * 0.75, crack3Glow * 0.4));
    
    // === STONE PLATES ===
    vec4 v = voronoi(uv * 2.5 + vec2(fbm(uv * 4.0, 3) * 0.22));
    float cellDist = v.x;
    float plateId = hash(v.zw);
    
    float stoneTex = stoneTexture(uv);
    float plateHeight = plateId * 0.12;
    float totalHeight = stoneTex + plateHeight;
    
    // Depth near cracks
    totalHeight -= crackGlow * 0.25;
    
    // Bevel at plate edges
    float bevel = smoothstep(0.0, 0.15, cellDist);
    totalHeight *= 0.82 + bevel * 0.18;
    
    // Stone colors
    vec3 stoneBlack = vec3(0.012, 0.012, 0.015);
    vec3 stoneDark = vec3(0.035, 0.032, 0.04);
    vec3 stoneMid = vec3(0.065, 0.06, 0.075);
    vec3 stoneLight = vec3(0.11, 0.1, 0.12);
    
    float h = totalHeight * 0.5 + 0.5;
    vec3 stoneColor = stoneBlack;
    stoneColor = mix(stoneColor, stoneDark, smoothstep(0.28, 0.42, h));
    stoneColor = mix(stoneColor, stoneMid, smoothstep(0.42, 0.58, h));
    stoneColor = mix(stoneColor, stoneLight, smoothstep(0.62, 0.82, h) * 0.35);
    
    // Micro detail
    float micro = snoise(uv * 45.0) * 0.05;
    stoneColor *= 1.0 + micro;
    
    // Highlight on peaks
    float highlight = pow(max(h - 0.62, 0.0) * 2.8, 2.0) * 0.035;
    stoneColor += vec3(highlight);
    
    // === LAVA (only in cracks!) ===
    // Temperature based on position in crack
    float lavaTemp = crackCore * 0.55 + cracks * 0.45;
    lavaTemp = pow(lavaTemp, 0.7);
    
    vec3 lava = lavaGradient(lavaTemp, uv, uTime);
    
    // Boost near mouse
    lava *= 1.0 + mouseNear * 0.4;
    
    // Pulse
    float pulse = sin(uTime * 0.5 + totalHeight * 2.5) * 0.05 + 0.97;
    lava *= pulse;
    
    // Extra bright core
    vec3 hotCore = vec3(1.0, 0.82, 0.35);
    lava = mix(lava, hotCore, crackCore * 0.3 * (0.5 + mouseNear * 0.7));
    
    // === COMPOSITE ===
    vec3 finalColor = stoneColor;
    
    // Red glow ONLY near actual cracks (subsurface scattering effect)
    float glowMask = crackGlow * (0.2 + openAmount * 0.3);
    finalColor += vec3(0.08, 0.015, 0.0) * glowMask;
    
    // Darken stone near cracks (shadow)
    finalColor *= 1.0 - crackGlow * 0.4;
    
    // Lava ONLY inside cracks
    finalColor = mix(finalColor, lava, cracks);
    
    // Rim lighting around cracks
    float rim = max(crackGlow - cracks, 0.0) * (0.3 + openAmount * 0.4);
    finalColor += vec3(0.18, 0.035, 0.0) * rim;
    
    // Bloom near mouse
    float bloom = cracks * mouseNear * 0.35;
    finalColor += vec3(0.25, 0.07, 0.01) * bloom;
    
    // === POST ===
    float vig = 1.0 - smoothstep(0.42, 1.25, length(uv - 0.5) * 1.08);
    finalColor *= vig * 0.18 + 0.82;
    
    finalColor = pow(finalColor, vec3(0.95));
    
    gl_FragColor = vec4(finalColor, 1.0);
  }
`;

function init() {
  const canvas = document.getElementById('shader-canvas') as HTMLCanvasElement;
  if (!canvas) return;
  
  const renderer = new THREE.WebGLRenderer({ 
    canvas, 
    antialias: true,
    powerPreference: 'high-performance'
  });
  renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
  renderer.setSize(window.innerWidth, window.innerHeight);
  
  const scene = new THREE.Scene();
  const camera = new THREE.OrthographicCamera(-1, 1, 1, -1, 0.1, 10);
  camera.position.z = 1;
  
  const uniforms = {
    uTime: { value: 0 },
    uMouse: { value: new THREE.Vector2(0.5, 0.5) },
    uResolution: { value: new THREE.Vector2(window.innerWidth, window.innerHeight) },
    uMouseInfluence: { value: 0.3 }
  };
  
  const material = new THREE.ShaderMaterial({
    vertexShader,
    fragmentShader,
    uniforms
  });
  
  const mesh = new THREE.Mesh(new THREE.PlaneGeometry(2, 2), material);
  scene.add(mesh);
  
  const targetMouse = new THREE.Vector2(0.5, 0.5);
  const currentMouse = new THREE.Vector2(0.5, 0.5);
  let targetInfluence = 0.3;
  let currentInfluence = 0.3;
  let lastMouseMove = Date.now();
  
  document.addEventListener('mousemove', (e) => {
    targetMouse.x = e.clientX / window.innerWidth;
    targetMouse.y = 1.0 - (e.clientY / window.innerHeight);
    lastMouseMove = Date.now();
    
    const centerDist = Math.sqrt(
      Math.pow(targetMouse.x - 0.5, 2) + 
      Math.pow(targetMouse.y - 0.5, 2)
    );
    targetInfluence = Math.min(1.0, 0.5 + (1.0 - centerDist) * 0.7);
  });
  
  document.addEventListener('mouseleave', () => {
    targetInfluence = 0.2;
  });
  
  document.addEventListener('touchmove', (e) => {
    if (e.touches.length > 0) {
      targetMouse.x = e.touches[0].clientX / window.innerWidth;
      targetMouse.y = 1.0 - (e.touches[0].clientY / window.innerHeight);
      lastMouseMove = Date.now();
      targetInfluence = 1.0;
    }
  });
  
  document.addEventListener('touchend', () => {
    targetInfluence = 0.3;
  });
  
  window.addEventListener('resize', () => {
    renderer.setSize(window.innerWidth, window.innerHeight);
    uniforms.uResolution.value.set(window.innerWidth, window.innerHeight);
  });
  
  function animate() {
    requestAnimationFrame(animate);
    
    uniforms.uTime.value += 0.016;
    
    currentMouse.x += (targetMouse.x - currentMouse.x) * 0.04;
    currentMouse.y += (targetMouse.y - currentMouse.y) * 0.04;
    uniforms.uMouse.value.copy(currentMouse);
    
    if (Date.now() - lastMouseMove > 2500) {
      targetInfluence = Math.max(0.2, targetInfluence - 0.003);
    }
    
    const speed = currentInfluence < targetInfluence ? 0.02 : 0.008;
    currentInfluence += (targetInfluence - currentInfluence) * speed;
    uniforms.uMouseInfluence.value = currentInfluence;
    
    renderer.render(scene, camera);
  }
  
  animate();
}

if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', init);
} else {
  init();
}
</script>
