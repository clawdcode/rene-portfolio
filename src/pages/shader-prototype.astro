---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Shader Prototype | René Portfolio">
  <main class="shader-page">
    <canvas id="shader-canvas"></canvas>
    <div class="overlay">
      <h1>Shader Prototype V8</h1>
      <p>Move your mouse to reveal the glowing lava beneath</p>
      <a href="/" class="back-link">← Back to Portfolio</a>
    </div>
  </main>
</Layout>

<style>
  .shader-page {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background: #000;
  }
  
  #shader-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .overlay {
    position: absolute;
    bottom: 40px;
    left: 40px;
    z-index: 10;
    pointer-events: none;
  }
  
  .overlay h1 {
    font-size: 1.5rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.8);
  }
  
  .overlay p {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
  }
  
  .overlay .back-link {
    pointer-events: auto;
    font-size: 0.875rem;
    color: rgba(255, 150, 100, 0.8);
    transition: color 0.2s ease;
  }
  
  .overlay .back-link:hover {
    color: rgba(255, 180, 120, 1);
  }
</style>

<script>
import * as THREE from 'three';

// ===========================================
// STEP 1: Generate heightmap on CPU once
// ===========================================
function generateHeightmap(size: number): HTMLCanvasElement {
  const canvas = document.createElement('canvas');
  canvas.width = size;
  canvas.height = size;
  const ctx = canvas.getContext('2d')!;
  const imageData = ctx.createImageData(size, size);
  
  // Simple hash functions
  const hash = (x: number, y: number) => {
    const n = Math.sin(x * 127.1 + y * 311.7) * 43758.5453;
    return n - Math.floor(n);
  };
  
  const hash2 = (x: number, y: number): [number, number] => {
    return [
      hash(x, y),
      hash(x + 127.1, y + 269.5)
    ];
  };
  
  // Simple noise
  const noise = (x: number, y: number): number => {
    const ix = Math.floor(x);
    const iy = Math.floor(y);
    const fx = x - ix;
    const fy = y - iy;
    
    const ux = fx * fx * (3 - 2 * fx);
    const uy = fy * fy * (3 - 2 * fy);
    
    const a = hash(ix, iy);
    const b = hash(ix + 1, iy);
    const c = hash(ix, iy + 1);
    const d = hash(ix + 1, iy + 1);
    
    return a + (b - a) * ux + (c - a) * uy + (a - b - c + d) * ux * uy;
  };
  
  // FBM
  const fbm = (x: number, y: number, octaves: number): number => {
    let value = 0, amp = 0.5, freq = 1;
    for (let i = 0; i < octaves; i++) {
      value += amp * (noise(x * freq, y * freq) * 2 - 1);
      amp *= 0.5;
      freq *= 2;
    }
    return value;
  };
  
  // Voronoi edge distance
  const voronoiEdge = (px: number, py: number): number => {
    const nx = Math.floor(px);
    const ny = Math.floor(py);
    const fx = px - nx;
    const fy = py - ny;
    
    let mgx = 0, mgy = 0, mrx = 0, mry = 0;
    let md = 8;
    
    for (let j = -1; j <= 1; j++) {
      for (let i = -1; i <= 1; i++) {
        const [ox, oy] = hash2(nx + i, ny + j);
        const rx = i + 0.5 + 0.45 * Math.sin(6.2831 * ox) - fx;
        const ry = j + 0.5 + 0.45 * Math.sin(6.2831 * oy) - fy;
        const d = rx * rx + ry * ry;
        if (d < md) {
          md = d;
          mrx = rx; mry = ry;
          mgx = i; mgy = j;
        }
      }
    }
    
    md = 8;
    for (let j = -2; j <= 2; j++) {
      for (let i = -2; i <= 2; i++) {
        const [ox, oy] = hash2(nx + mgx + i, ny + mgy + j);
        const rx = mgx + i + 0.5 + 0.45 * Math.sin(6.2831 * ox) - fx;
        const ry = mgy + j + 0.5 + 0.45 * Math.sin(6.2831 * oy) - fy;
        
        const diffx = rx - mrx;
        const diffy = ry - mry;
        if (diffx * diffx + diffy * diffy > 0.00001) {
          const midx = 0.5 * (mrx + rx);
          const midy = 0.5 * (mry + ry);
          const len = Math.sqrt(diffx * diffx + diffy * diffy);
          const dot = midx * (diffx / len) + midy * (diffy / len);
          md = Math.min(md, dot);
        }
      }
    }
    return md;
  };
  
  // Generate heightmap
  for (let y = 0; y < size; y++) {
    for (let x = 0; x < size; x++) {
      const u = x / size;
      const v = y / size;
      
      // Warp coordinates
      const warpX = fbm(u * 1.8 + 10, v * 1.8 + 10, 4) * 0.2;
      const warpY = fbm(u * 1.8 + 20, v * 1.8 + 20, 4) * 0.2;
      
      // Multi-scale cracks
      const edge1 = voronoiEdge((u + warpX) * 2.2, (v + warpY) * 2.2);
      const edge2 = voronoiEdge((u + warpX) * 4.0 + 50, (v + warpY) * 4.0 + 50);
      const edge3 = voronoiEdge((u + warpX) * 6.5 + 100, (v + warpY) * 6.5 + 100);
      
      // Base crack widths (will be expanded by mouse in shader)
      const w1 = 0.03;
      const w2 = 0.022;
      const w3 = 0.015;
      
      // Height profile
      const smoothstep = (e0: number, e1: number, x: number) => {
        const t = Math.max(0, Math.min(1, (x - e0) / (e1 - e0)));
        return t * t * (3 - 2 * t);
      };
      
      const h1 = smoothstep(0, w1 * 1.5, edge1);
      const h2 = smoothstep(0, w2 * 1.5, edge2);
      const h3 = smoothstep(0, w3 * 1.5, edge3);
      
      let height = Math.min(h1, Math.min(h2 * 0.7 + 0.3, h3 * 0.5 + 0.5));
      
      // Store height in R, edge distances in GBA for shader use
      const idx = (y * size + x) * 4;
      imageData.data[idx] = Math.floor(height * 255);           // R: height
      imageData.data[idx + 1] = Math.floor(Math.min(1, edge1 * 10) * 255);  // G: edge1
      imageData.data[idx + 2] = Math.floor(Math.min(1, edge2 * 10) * 255);  // B: edge2
      imageData.data[idx + 3] = Math.floor(Math.min(1, edge3 * 10) * 255);  // A: edge3
    }
  }
  
  ctx.putImageData(imageData, 0, 0);
  return canvas;
}

// ===========================================
// SHADERS - Now using pre-baked heightmap
// ===========================================
const vertexShader = `
  varying vec2 vUv;
  void main() {
    vUv = uv;
    gl_Position = projectionMatrix * modelViewMatrix * vec4(position, 1.0);
  }
`;

const fragmentShader = `
  precision highp float;
  
  uniform float uTime;
  uniform vec2 uMouse;
  uniform vec2 uResolution;
  uniform float uMouseInfluence;
  uniform sampler2D uStoneTexture;
  uniform sampler2D uLavaTexture;
  uniform sampler2D uHeightMap;
  
  varying vec2 vUv;
  
  float hash(vec2 p) { return fract(sin(dot(p, vec2(127.1, 311.7))) * 43758.5453); }
  
  // Simple noise for lava animation
  float noise(vec2 p) {
    vec2 i = floor(p);
    vec2 f = fract(p);
    f = f * f * (3.0 - 2.0 * f);
    float a = hash(i);
    float b = hash(i + vec2(1.0, 0.0));
    float c = hash(i + vec2(0.0, 1.0));
    float d = hash(i + vec2(1.0, 1.0));
    return mix(mix(a, b, f.x), mix(c, d, f.x), f.y);
  }
  
  // Get height from pre-baked texture, with mouse-based crack expansion
  float getHeight(vec2 uv, float mouseInf) {
    vec4 data = texture2D(uHeightMap, uv);
    float baseHeight = data.r;
    
    // Edge distances from texture (scaled back)
    float edge1 = data.g / 10.0;
    float edge2 = data.b / 10.0;
    float edge3 = data.a / 10.0;
    
    // Expand cracks based on mouse
    float exp1 = noise(uv * 2.0) * 0.5 + 0.5;
    float exp2 = noise(uv * 4.0 + 30.0) * 0.5 + 0.5;
    
    float w1 = 0.03 + mouseInf * 0.28 * exp1;
    float w2 = 0.022 + mouseInf * 0.18 * exp2;
    float w3 = 0.015 + mouseInf * 0.10 * exp1;
    
    float h1 = smoothstep(0.0, w1 * 1.5, edge1);
    float h2 = smoothstep(0.0, w2 * 1.5, edge2);
    float h3 = smoothstep(0.0, w3 * 1.5, edge3);
    
    return min(h1, min(h2 * 0.7 + 0.3, h3 * 0.5 + 0.5));
  }
  
  // Mouse influence
  float getMouseInfluence(vec2 uv, vec2 mouse, float baseInfluence) {
    vec2 aspect = vec2(uResolution.x / uResolution.y, 1.0);
    float dist = distance(uv * aspect, mouse * aspect);
    float inf = smoothstep(0.6, 0.0, dist);
    return pow(inf, 1.6) * baseInfluence;
  }
  
  // Normal from height
  vec3 getNormal(vec2 uv, float mouseInf) {
    float eps = 0.003;
    float h = getHeight(uv, mouseInf);
    float hx = getHeight(uv + vec2(eps, 0.0), mouseInf);
    float hy = getHeight(uv + vec2(0.0, eps), mouseInf);
    return normalize(vec3((h - hx) * 2.0, (h - hy) * 2.0, 1.0));
  }
  
  void main() {
    vec2 uv = vUv;
    float time = uTime;
    float mouseInf = getMouseInfluence(uv, uMouse, uMouseInfluence);
    
    // Get height and normal
    float height = getHeight(uv, mouseInf);
    vec3 normal = getNormal(uv, mouseInf);
    
    // Sample textures
    vec2 stoneUV = uv * 3.0;
    vec2 lavaUV = uv * 2.0;
    lavaUV.x += time * 0.02;
    lavaUV.y += sin(uv.x * 5.0 + time * 0.3) * 0.02;
    
    vec3 stoneColor = texture2D(uStoneTexture, stoneUV).rgb;
    vec3 lavaTexColor = texture2D(uLavaTexture, lavaUV).rgb;
    
    // Stone: dark basalt with lighting
    stoneColor = pow(stoneColor, vec3(1.6)) * 0.4;
    
    vec3 lightDir = normalize(vec3(0.5, 0.5, 0.8));
    float diffuse = max(dot(normal, lightDir), 0.0);
    float lighting = 0.3 + diffuse * 0.7;
    stoneColor *= lighting;
    
    // Rim light
    float rim = 1.0 - max(dot(normal, vec3(0.0, 0.0, 1.0)), 0.0);
    stoneColor += vec3(0.05, 0.03, 0.02) * pow(rim, 3.0);
    
    // Lava color from texture luminance
    float lavaLum = dot(lavaTexColor, vec3(0.299, 0.587, 0.114));
    vec3 lavaColor;
    if (lavaLum < 0.3) {
      lavaColor = mix(vec3(0.15, 0.02, 0.0), vec3(0.6, 0.1, 0.0), lavaLum / 0.3);
    } else if (lavaLum < 0.6) {
      lavaColor = mix(vec3(0.6, 0.1, 0.0), vec3(1.0, 0.4, 0.0), (lavaLum - 0.3) / 0.3);
    } else if (lavaLum < 0.85) {
      lavaColor = mix(vec3(1.0, 0.4, 0.0), vec3(1.0, 0.8, 0.2), (lavaLum - 0.6) / 0.25);
    } else {
      lavaColor = mix(vec3(1.0, 0.8, 0.2), vec3(1.0, 1.0, 0.8), (lavaLum - 0.85) / 0.15);
    }
    lavaColor *= 1.8 + lavaLum * 1.2;
    
    // Crack masks from height
    float crackMask = 1.0 - smoothstep(0.1, 0.5, height);
    float coreMask = 1.0 - smoothstep(0.0, 0.2, height);
    float glowMask = 1.0 - smoothstep(0.2, 0.7, height);
    
    // Pulse
    float pulse = sin(time * 0.5 + noise(uv * 2.5) * 4.0) * 0.1 + 1.0;
    vec3 finalLava = lavaColor * pulse * (1.0 + mouseInf * 0.5);
    
    // Composite
    vec3 stone = stoneColor;
    stone += vec3(0.12, 0.03, 0.0) * glowMask * (0.5 + mouseInf * 0.7);
    
    float lavaMix = smoothstep(0.05, 0.35, crackMask);
    vec3 final = mix(stone, finalLava, lavaMix);
    
    // Edge glow
    float edgeGlow = max(glowMask - crackMask * 0.5, 0.0);
    final += vec3(0.3, 0.08, 0.0) * edgeGlow * (0.6 + mouseInf * 0.5);
    
    // Core brightness
    final += vec3(0.4, 0.25, 0.05) * coreMask * (0.4 + mouseInf * 0.4);
    
    // Vignette
    float vig = 1.0 - smoothstep(0.4, 1.4, length(uv - 0.5) * 1.1);
    final *= 0.85 + vig * 0.15;
    
    // Film grain
    final += hash(uv * 1000.0 + time) * 0.012 - 0.006;
    
    gl_FragColor = vec4(final, 1.0);
  }
`;

function init() {
  const canvas = document.getElementById('shader-canvas') as HTMLCanvasElement;
  if (!canvas) return;
  
  console.log('Generating heightmap...');
  const heightmapCanvas = generateHeightmap(512);
  console.log('Heightmap ready');
  
  const renderer = new THREE.WebGLRenderer({ canvas, antialias: true, powerPreference: 'high-performance' });
  renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
  renderer.setSize(window.innerWidth, window.innerHeight);
  
  const scene = new THREE.Scene();
  const camera = new THREE.OrthographicCamera(-1, 1, 1, -1, 0.1, 10);
  camera.position.z = 1;
  
  const textureLoader = new THREE.TextureLoader();
  const basePath = import.meta.env.BASE_URL;
  
  // Create heightmap texture from canvas
  const heightmapTexture = new THREE.CanvasTexture(heightmapCanvas);
  heightmapTexture.wrapS = heightmapTexture.wrapT = THREE.RepeatWrapping;
  heightmapTexture.minFilter = THREE.LinearFilter;
  heightmapTexture.magFilter = THREE.LinearFilter;
  
  const stoneTexture = textureLoader.load(`${basePath}textures/stone.jpg`, (tex) => {
    tex.wrapS = tex.wrapT = THREE.RepeatWrapping;
    tex.minFilter = THREE.LinearMipmapLinearFilter;
  });
  
  const lavaTexture = textureLoader.load(`${basePath}textures/lava.png`, (tex) => {
    tex.wrapS = tex.wrapT = THREE.RepeatWrapping;
    tex.minFilter = THREE.LinearMipmapLinearFilter;
  });
  
  const uniforms = {
    uTime: { value: 0 },
    uMouse: { value: new THREE.Vector2(0.5, 0.5) },
    uResolution: { value: new THREE.Vector2(window.innerWidth, window.innerHeight) },
    uMouseInfluence: { value: 0.45 },
    uStoneTexture: { value: stoneTexture },
    uLavaTexture: { value: lavaTexture },
    uHeightMap: { value: heightmapTexture }
  };
  
  const material = new THREE.ShaderMaterial({ vertexShader, fragmentShader, uniforms });
  const mesh = new THREE.Mesh(new THREE.PlaneGeometry(2, 2), material);
  scene.add(mesh);
  
  const targetMouse = new THREE.Vector2(0.5, 0.5);
  const currentMouse = new THREE.Vector2(0.5, 0.5);
  let targetInfluence = 0.45, currentInfluence = 0.45, lastMouseMove = Date.now();
  
  document.addEventListener('mousemove', (e) => {
    targetMouse.x = e.clientX / window.innerWidth;
    targetMouse.y = 1.0 - (e.clientY / window.innerHeight);
    lastMouseMove = Date.now();
    targetInfluence = Math.min(1.1, targetInfluence + 0.08);
  });
  
  document.addEventListener('mouseleave', () => { targetInfluence = 0.35; });
  
  document.addEventListener('touchmove', (e) => {
    if (e.touches.length > 0) {
      targetMouse.x = e.touches[0].clientX / window.innerWidth;
      targetMouse.y = 1.0 - (e.touches[0].clientY / window.innerHeight);
      lastMouseMove = Date.now();
      targetInfluence = 1.2;
    }
  });
  
  document.addEventListener('touchend', () => { targetInfluence = 0.45; });
  
  window.addEventListener('resize', () => {
    renderer.setSize(window.innerWidth, window.innerHeight);
    uniforms.uResolution.value.set(window.innerWidth, window.innerHeight);
  });
  
  function animate() {
    requestAnimationFrame(animate);
    uniforms.uTime.value += 0.016;
    
    currentMouse.x += (targetMouse.x - currentMouse.x) * 0.05;
    currentMouse.y += (targetMouse.y - currentMouse.y) * 0.05;
    uniforms.uMouse.value.copy(currentMouse);
    
    if (Date.now() - lastMouseMove > 1000) {
      targetInfluence = Math.max(0.35, targetInfluence - 0.003);
    }
    
    const speed = currentInfluence < targetInfluence ? 0.035 : 0.012;
    currentInfluence += (targetInfluence - currentInfluence) * speed;
    uniforms.uMouseInfluence.value = currentInfluence;
    
    renderer.render(scene, camera);
  }
  
  animate();
}

if (document.readyState === 'loading') document.addEventListener('DOMContentLoaded', init);
else init();
</script>
