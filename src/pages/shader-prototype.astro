---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Shader Prototype | René Portfolio">
  <main class="shader-page">
    <canvas id="shader-canvas"></canvas>
    <div class="overlay">
      <h1>Shader Prototype V3</h1>
      <p>Move your mouse to see the cracks open</p>
      <a href="/" class="back-link">← Back to Portfolio</a>
    </div>
  </main>
</Layout>

<style>
  .shader-page {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background: #000;
  }
  
  #shader-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .overlay {
    position: absolute;
    bottom: 40px;
    left: 40px;
    z-index: 10;
    pointer-events: none;
  }
  
  .overlay h1 {
    font-size: 1.5rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.8);
  }
  
  .overlay p {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
  }
  
  .overlay .back-link {
    pointer-events: auto;
    font-size: 0.875rem;
    color: rgba(255, 150, 100, 0.8);
    transition: color 0.2s ease;
  }
  
  .overlay .back-link:hover {
    color: rgba(255, 180, 120, 1);
  }
</style>

<script>
import * as THREE from 'three';

const vertexShader = `
  varying vec2 vUv;
  
  void main() {
    vUv = uv;
    gl_Position = projectionMatrix * modelViewMatrix * vec4(position, 1.0);
  }
`;

const fragmentShader = `
  precision highp float;
  
  uniform float uTime;
  uniform vec2 uMouse;
  uniform vec2 uResolution;
  uniform float uMouseInfluence;
  varying vec2 vUv;
  
  // Simplex noise
  vec3 mod289(vec3 x) { return x - floor(x * (1.0 / 289.0)) * 289.0; }
  vec2 mod289(vec2 x) { return x - floor(x * (1.0 / 289.0)) * 289.0; }
  vec3 permute(vec3 x) { return mod289(((x*34.0)+1.0)*x); }
  
  float snoise(vec2 v) {
    const vec4 C = vec4(0.211324865405187, 0.366025403784439, -0.577350269189626, 0.024390243902439);
    vec2 i  = floor(v + dot(v, C.yy));
    vec2 x0 = v - i + dot(i, C.xx);
    vec2 i1 = (x0.x > x0.y) ? vec2(1.0, 0.0) : vec2(0.0, 1.0);
    vec4 x12 = x0.xyxy + C.xxzz;
    x12.xy -= i1;
    i = mod289(i);
    vec3 p = permute(permute(i.y + vec3(0.0, i1.y, 1.0)) + i.x + vec3(0.0, i1.x, 1.0));
    vec3 m = max(0.5 - vec3(dot(x0,x0), dot(x12.xy,x12.xy), dot(x12.zw,x12.zw)), 0.0);
    m = m*m; m = m*m;
    vec3 x = 2.0 * fract(p * C.www) - 1.0;
    vec3 h = abs(x) - 0.5;
    vec3 ox = floor(x + 0.5);
    vec3 a0 = x - ox;
    m *= 1.79284291400159 - 0.85373472095314 * (a0*a0 + h*h);
    vec3 g;
    g.x = a0.x * x0.x + h.x * x0.y;
    g.yz = a0.yz * x12.xz + h.yz * x12.yw;
    return 130.0 * dot(m, g);
  }
  
  float hash(vec2 p) {
    return fract(sin(dot(p, vec2(127.1, 311.7))) * 43758.5453);
  }
  
  vec2 hash2(vec2 p) {
    p = vec2(dot(p, vec2(127.1, 311.7)), dot(p, vec2(269.5, 183.3)));
    return fract(sin(p) * 43758.5453);
  }
  
  float fbm(vec2 p, int octaves) {
    float value = 0.0;
    float amplitude = 0.5;
    for(int i = 0; i < 6; i++) {
      if(i >= octaves) break;
      value += amplitude * snoise(p);
      amplitude *= 0.5;
      p *= 2.0;
    }
    return value;
  }
  
  float turbulence(vec2 p, int octaves) {
    float value = 0.0;
    float amplitude = 0.5;
    for(int i = 0; i < 6; i++) {
      if(i >= octaves) break;
      value += amplitude * abs(snoise(p));
      amplitude *= 0.5;
      p *= 2.0;
    }
    return value;
  }
  
  // Voronoi
  vec4 voronoi(vec2 p) {
    vec2 n = floor(p);
    vec2 f = fract(p);
    
    float md1 = 8.0;
    float md2 = 8.0;
    vec2 cellId = vec2(0.0);
    
    for(int j = -1; j <= 1; j++) {
      for(int i = -1; i <= 1; i++) {
        vec2 g = vec2(float(i), float(j));
        vec2 o = hash2(n + g);
        o = 0.5 + 0.4 * sin(6.2831 * o + 0.15);
        vec2 r = g + o - f;
        float d = dot(r, r);
        
        if(d < md1) {
          md2 = md1;
          md1 = d;
          cellId = n + g;
        } else if(d < md2) {
          md2 = d;
        }
      }
    }
    
    return vec4(sqrt(md1), sqrt(md2), cellId);
  }
  
  // Organic crack edge
  float getCrackEdge(vec2 uv, float scale, float warpAmt) {
    vec2 warp = vec2(
      fbm(uv * 3.5, 4),
      fbm(uv * 3.5 + 100.0, 4)
    ) * warpAmt;
    
    vec2 p = uv * scale + warp;
    vec4 v = voronoi(p);
    
    float edge = v.y - v.x;
    
    // Uneven edges
    float noise = snoise(uv * scale * 4.0) * 0.01;
    noise += snoise(uv * scale * 10.0) * 0.005;
    
    return edge + noise;
  }
  
  // Rich stone texture
  float stoneTexture(vec2 p) {
    float large = turbulence(p * 3.5, 4) * 0.4;
    float med = snoise(p * 10.0) * 0.22;
    float fine = snoise(p * 25.0) * 0.12;
    float detail = snoise(p * 50.0) * 0.06;
    return large + med + fine + detail;
  }
  
  // Lava gradient
  vec3 lavaGradient(float temp, vec2 uv, float time) {
    vec2 flow = uv + vec2(time * 0.008, time * 0.005);
    float var1 = snoise(flow * 5.0) * 0.1;
    float var2 = snoise(flow * 10.0) * 0.06;
    
    float t = clamp(temp + var1 + var2, 0.0, 1.0);
    
    vec3 darkRed = vec3(0.22, 0.04, 0.0);
    vec3 red = vec3(0.55, 0.12, 0.0);
    vec3 orange = vec3(0.92, 0.38, 0.02);
    vec3 yellow = vec3(1.0, 0.62, 0.12);
    vec3 white = vec3(1.0, 0.88, 0.5);
    
    vec3 col = darkRed;
    col = mix(col, red, smoothstep(0.0, 0.22, t));
    col = mix(col, orange, smoothstep(0.22, 0.48, t));
    col = mix(col, yellow, smoothstep(0.48, 0.72, t));
    col = mix(col, white, smoothstep(0.78, 1.0, t) * 0.55);
    
    return col;
  }
  
  void main() {
    vec2 uv = vUv;
    vec2 aspect = vec2(uResolution.x / uResolution.y, 1.0);
    vec2 uvAspect = uv * aspect;
    vec2 mouseAspect = uMouse * aspect;
    
    float dist = distance(uvAspect, mouseAspect);
    float mouseNear = smoothstep(0.32, 0.0, dist);
    float mouseWide = smoothstep(0.65, 0.0, dist);
    
    float openAmount = uMouseInfluence;
    
    // === CRACKS ===
    float edge1 = getCrackEdge(uv, 2.2, 0.2);
    float edge2 = getCrackEdge(uv + 50.0, 4.0, 0.16);
    float edge3 = getCrackEdge(uv + 100.0, 7.5, 0.12);
    
    // Animated widths - wider primary cracks
    float baseW1 = 0.018;
    float maxW1 = 0.1;
    float w1 = mix(baseW1, maxW1, openAmount * mouseWide);
    w1 *= 0.6 + snoise(uv * 4.5) * 0.55;
    
    float baseW2 = 0.012;
    float maxW2 = 0.06;
    float w2 = mix(baseW2, maxW2, openAmount * mouseWide * 0.8);
    w2 *= 0.5 + snoise(uv * 7.0 + 30.0) * 0.65;
    
    float baseW3 = 0.007;
    float maxW3 = 0.032;
    float w3 = mix(baseW3, maxW3, openAmount * mouseWide * 0.55);
    w3 *= 0.4 + snoise(uv * 11.0 + 60.0) * 0.75;
    
    // Crack masks - sharper edges
    float crack1 = 1.0 - smoothstep(0.0, w1, edge1);
    float crack1Core = 1.0 - smoothstep(0.0, w1 * 0.32, edge1);
    float crack1Glow = 1.0 - smoothstep(0.0, w1 * 2.2, edge1);
    
    float crack2 = 1.0 - smoothstep(0.0, w2, edge2);
    float crack2Core = 1.0 - smoothstep(0.0, w2 * 0.32, edge2);
    float crack2Glow = 1.0 - smoothstep(0.0, w2 * 2.0, edge2);
    
    float fineVis = smoothstep(0.4, 0.8, openAmount * mouseWide);
    float crack3 = (1.0 - smoothstep(0.0, w3, edge3)) * fineVis;
    float crack3Core = (1.0 - smoothstep(0.0, w3 * 0.32, edge3)) * fineVis;
    float crack3Glow = (1.0 - smoothstep(0.0, w3 * 1.8, edge3)) * fineVis * 0.5;
    
    float cracks = max(crack1, max(crack2 * 0.88, crack3 * 0.6));
    float crackCore = max(crack1Core, max(crack2Core * 0.82, crack3Core * 0.5));
    float crackGlow = max(crack1Glow, max(crack2Glow * 0.7, crack3Glow * 0.35));
    
    // === STONE ===
    vec4 v = voronoi(uv * 2.2 + vec2(fbm(uv * 3.5, 3) * 0.2));
    float cellDist = v.x;
    float plateId = hash(v.zw);
    
    float stoneTex = stoneTexture(uv);
    float plateHeight = plateId * 0.14;
    float height = stoneTex + plateHeight;
    
    // Depth at cracks
    height -= crackGlow * 0.22;
    
    // Bevel
    float bevel = smoothstep(0.0, 0.14, cellDist);
    height *= 0.8 + bevel * 0.2;
    
    // Stone colors
    vec3 black = vec3(0.01, 0.01, 0.013);
    vec3 dark = vec3(0.032, 0.03, 0.038);
    vec3 mid = vec3(0.062, 0.058, 0.072);
    vec3 light = vec3(0.1, 0.095, 0.115);
    
    float h = height * 0.5 + 0.5;
    vec3 stone = black;
    stone = mix(stone, dark, smoothstep(0.26, 0.4, h));
    stone = mix(stone, mid, smoothstep(0.4, 0.56, h));
    stone = mix(stone, light, smoothstep(0.58, 0.78, h) * 0.38);
    
    // Micro texture
    float micro = snoise(uv * 42.0) * 0.045;
    stone *= 1.0 + micro;
    
    // Highlights
    float hilite = pow(max(h - 0.6, 0.0) * 2.6, 2.0) * 0.032;
    stone += vec3(hilite);
    
    // === LAVA ===
    float lavaTemp = crackCore * 0.52 + cracks * 0.48;
    lavaTemp = pow(lavaTemp, 0.68);
    
    vec3 lava = lavaGradient(lavaTemp, uv, uTime);
    lava *= 1.0 + mouseNear * 0.45;
    
    // Pulse
    float pulse = sin(uTime * 0.45 + height * 2.2) * 0.04 + 0.98;
    lava *= pulse;
    
    // Hot core
    vec3 hotWhite = vec3(1.0, 0.84, 0.38);
    lava = mix(lava, hotWhite, crackCore * 0.28 * (0.45 + mouseNear * 0.75));
    
    // === COMPOSITE ===
    vec3 final = stone;
    
    // Subsurface glow (subtle)
    float glow = crackGlow * (0.18 + openAmount * 0.25);
    final += vec3(0.07, 0.012, 0.0) * glow;
    
    // Shadow near cracks
    final *= 1.0 - crackGlow * 0.35;
    
    // Lava ONLY in cracks (hard threshold)
    float lavaMask = smoothstep(0.02, 0.08, cracks);
    final = mix(final, lava, lavaMask);
    
    // Rim glow
    float rim = max(crackGlow - cracks * 0.75, 0.0) * (0.28 + openAmount * 0.38);
    final += vec3(0.16, 0.032, 0.0) * rim;
    
    // Bloom near mouse
    float bloom = cracks * mouseNear * 0.3;
    final += vec3(0.22, 0.06, 0.008) * bloom;
    
    // === POST ===
    float vig = 1.0 - smoothstep(0.4, 1.22, length(uv - 0.5) * 1.05);
    final *= vig * 0.15 + 0.85;
    
    final = pow(final, vec3(0.94));
    
    gl_FragColor = vec4(final, 1.0);
  }
`;

function init() {
  const canvas = document.getElementById('shader-canvas') as HTMLCanvasElement;
  if (!canvas) return;
  
  const renderer = new THREE.WebGLRenderer({ 
    canvas, 
    antialias: true,
    powerPreference: 'high-performance'
  });
  renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
  renderer.setSize(window.innerWidth, window.innerHeight);
  
  const scene = new THREE.Scene();
  const camera = new THREE.OrthographicCamera(-1, 1, 1, -1, 0.1, 10);
  camera.position.z = 1;
  
  const uniforms = {
    uTime: { value: 0 },
    uMouse: { value: new THREE.Vector2(0.5, 0.5) },
    uResolution: { value: new THREE.Vector2(window.innerWidth, window.innerHeight) },
    uMouseInfluence: { value: 0.35 }
  };
  
  const material = new THREE.ShaderMaterial({
    vertexShader,
    fragmentShader,
    uniforms
  });
  
  const mesh = new THREE.Mesh(new THREE.PlaneGeometry(2, 2), material);
  scene.add(mesh);
  
  const targetMouse = new THREE.Vector2(0.5, 0.5);
  const currentMouse = new THREE.Vector2(0.5, 0.5);
  let targetInfluence = 0.35;
  let currentInfluence = 0.35;
  let lastMouseMove = Date.now();
  
  document.addEventListener('mousemove', (e) => {
    targetMouse.x = e.clientX / window.innerWidth;
    targetMouse.y = 1.0 - (e.clientY / window.innerHeight);
    lastMouseMove = Date.now();
    
    const centerDist = Math.sqrt(
      Math.pow(targetMouse.x - 0.5, 2) + 
      Math.pow(targetMouse.y - 0.5, 2)
    );
    targetInfluence = Math.min(1.0, 0.55 + (1.0 - centerDist) * 0.65);
  });
  
  document.addEventListener('mouseleave', () => {
    targetInfluence = 0.25;
  });
  
  document.addEventListener('touchmove', (e) => {
    if (e.touches.length > 0) {
      targetMouse.x = e.touches[0].clientX / window.innerWidth;
      targetMouse.y = 1.0 - (e.touches[0].clientY / window.innerHeight);
      lastMouseMove = Date.now();
      targetInfluence = 1.0;
    }
  });
  
  document.addEventListener('touchend', () => {
    targetInfluence = 0.35;
  });
  
  window.addEventListener('resize', () => {
    renderer.setSize(window.innerWidth, window.innerHeight);
    uniforms.uResolution.value.set(window.innerWidth, window.innerHeight);
  });
  
  function animate() {
    requestAnimationFrame(animate);
    
    uniforms.uTime.value += 0.016;
    
    currentMouse.x += (targetMouse.x - currentMouse.x) * 0.035;
    currentMouse.y += (targetMouse.y - currentMouse.y) * 0.035;
    uniforms.uMouse.value.copy(currentMouse);
    
    if (Date.now() - lastMouseMove > 2200) {
      targetInfluence = Math.max(0.25, targetInfluence - 0.0025);
    }
    
    const speed = currentInfluence < targetInfluence ? 0.018 : 0.007;
    currentInfluence += (targetInfluence - currentInfluence) * speed;
    uniforms.uMouseInfluence.value = currentInfluence;
    
    renderer.render(scene, camera);
  }
  
  animate();
}

if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', init);
} else {
  init();
}
</script>
